@code {
    // Serialization-safe DTO class
    private class ShelterDto
    {
        public required string ShelterName { get; set; }
        public required string Location { get; set; }
        public required string Country { get; set; }
        public required string PhoneNumber { get; set; }
        public required string Address { get; set; }
        public required string Email { get; set; }
        public string? Website { get; set; }
        public string? Facebook { get; set; }
        public string? Instagram { get; set; }
        public string? X { get; set; }
        public string? GoogleMapsLocation { get; set; }
        public string? OpeningTimes { get; set; }
        public DateTimeOffset? LastUpdated { get; set; }
        public ETag OriginalETag { get; set; }
    }

    private List<ShelterDto>? shelters;
    private List<ShelterDto>? filteredShelters;
    private List<string>? availableCountries;
    private bool isLoading = true;
    private string? successMessage;
    private string? errorMessage;

    // Modal states
    private bool showModal = false;
    private bool showViewModal = false;
    private bool showDeleteModal = false;
    private bool isEditMode = false;
    private bool isCreatingNew = false;
    private bool isSaving = false;
    private bool isDeleting = false;

    // Edit/Create state
    private Shelter? editingShelter;
    private ShelterDto? viewingShelter;
    private ShelterDto? deletingShelter;

    // Filter states
    private string searchTerm = string.Empty;
    private string? selectedCountry;

    // Quick add states
    private string googleMapsLink = string.Empty;
    private bool isExtracting = false;
    private bool extractionComplete = false;
    private string? extractionError;

    protected override async Task OnInitializedAsync()
    {
        await LoadShelters();

        // Subscribe to culture change
        LocalizationService.OnCultureChanged += OnCultureChanged;
    }

    private void OnCultureChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        LocalizationService.OnCultureChanged -= OnCultureChanged;
    }

    private async Task LoadShelters()
    {
        isLoading = true;
        try
        {
            var allShelters = await ShelterService.GetAllSheltersAsync();
            shelters = new List<ShelterDto>();

            foreach (var shelter in allShelters)
            {
                shelters.Add(new ShelterDto
                {
                    ShelterName = shelter.PartitionKey,
                    Location = shelter.RowKey,
                    Country = shelter.Country,
                    PhoneNumber = shelter.PhoneNumber,
                    Address = shelter.Address,
                    Email = shelter.Email,
                    Website = shelter.Website,
                    Facebook = shelter.Facebook,
                    Instagram = shelter.Instagram,
                    X = shelter.X,
                    GoogleMapsLocation = shelter.GoogleMapsLocation,
                    OpeningTimes = shelter.OpeningTimes,
                    LastUpdated = shelter.Timestamp,
                    OriginalETag = shelter.ETag
                });
            }

            // Extract unique countries for filter
            availableCountries = shelters.Select(s => s.Country).Distinct().OrderBy(c => c).ToList();

            filteredShelters = null;
        }
        catch (Exception ex)
        {
            errorMessage = "Failed to load shelters: " + ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private void FilterShelters()
    {
        ApplyFilters();
    }

    private void FilterByCountry(ChangeEventArgs e)
    {
        selectedCountry = e.Value?.ToString();
        ApplyFilters();
    }

    private void ApplyFilters()
    {
        if (shelters == null) return;

        var filtered = shelters.AsEnumerable();

        // Search filter
        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            filtered = filtered.Where(x =>
                x.ShelterName.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                x.Location.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                x.Country.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                x.PhoneNumber.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                x.Email.Contains(searchTerm, StringComparison.OrdinalIgnoreCase));
        }

        // Country filter
        if (!string.IsNullOrEmpty(selectedCountry))
        {
            filtered = filtered.Where(x => x.Country == selectedCountry);
        }

        filteredShelters = filtered.ToList();
    }

    private void ShowCreateModal()
    {
        googleMapsLink = string.Empty;
        isExtracting = false;
        extractionComplete = false;
        extractionError = null;
        editingShelter = null;
        isEditMode = false;
        isCreatingNew = false;
        showModal = true;
        ClearMessages();
    }

    private async Task ExtractShelterInfo()
    {
        if (string.IsNullOrWhiteSpace(googleMapsLink))
        {
            extractionError = "Please provide a Google Maps link.";
            return;
        }

        isExtracting = true;
        extractionError = null;
        StateHasChanged();

        try
        {
            // Use Google Places API to extract place details
            var placeDetails = await GooglePlacesService.GetPlaceDetailsFromUrlAsync(googleMapsLink);

            if (placeDetails == null)
            {
                extractionError = "Could not extract place information from the URL. Please verify the link and try again.";
                isExtracting = false;
                return;
            }

            // Extract city from address
            var city = ExtractCityFromAddress(placeDetails.FormattedAddress) ?? "Unknown";

            // Get default country from configuration
            var defaultCountry = Configuration["DefaultCountryValue"] ?? "Portugal";

            // Format opening hours
            var openingTimes = FormatOpeningHours(placeDetails.OpeningHours?.WeekdayText);

            // Create shelter entry with extracted info (email required, so use placeholder)
            editingShelter = new Shelter
            {
                PartitionKey = CleanShelterName(placeDetails.Name),
                RowKey = city,
                GoogleMapsLocation = googleMapsLink.Trim(), // Store original link
                Country = defaultCountry,
                Address = placeDetails.FormattedAddress ?? string.Empty,
                PhoneNumber = placeDetails.PhoneNumber ?? string.Empty,
                Email = string.Empty, // Must be filled manually
                Website = placeDetails.Website,
                OpeningTimes = openingTimes
            };

            extractionComplete = true;
        }
        catch (Exception ex)
        {
            extractionError = $"Error extracting information: {ex.Message}";
        }
        finally
        {
            isExtracting = false;
            StateHasChanged();
        }
    }

    private void SkipToManualEntry()
    {
        var defaultCountry = Configuration["DefaultCountryValue"] ?? "Portugal";

        editingShelter = new Shelter
        {
            PartitionKey = string.Empty,
            RowKey = string.Empty,
            Country = defaultCountry,
            PhoneNumber = string.Empty,
            Address = string.Empty,
            Email = string.Empty
        };

        isEditMode = true;
        isCreatingNew = true;
        extractionComplete = false;
    }

    private void ProceedToEdit()
    {
        isEditMode = true;
        isCreatingNew = true;
        extractionComplete = false;
    }

    private string CleanShelterName(string name)
    {
        // Remove common suffixes/prefixes if needed
        name = name.Trim();

        // Ensure it's within the character limit
        if (name.Length > 50)
        {
            name = name.Substring(0, 50);
        }

        return name;
    }

    private string? ExtractCityFromAddress(string? address)
    {
        if (string.IsNullOrEmpty(address)) return null;

        // Common Madeira cities
        var cityPatterns = new[]
        {
            "Funchal", "Cmara de Lobos", "Ribeira Brava", "Machico",
            "Santa Cruz", "Calheta", "Ponta do Sol", "So Vicente",
            "Santana", "Porto Moniz", "Ponta Delgada", "Porto Santo"
        };

        foreach (var city in cityPatterns)
        {
            if (address.Contains(city, StringComparison.OrdinalIgnoreCase))
            {
                return city;
            }
        }

        // Fallback: try to extract from address format "Street, City, Postal Code, Country"
        var parts = address.Split(',');
        if (parts.Length >= 2)
        {
            var potentialCity = parts[1].Trim();
            if (potentialCity.Length >= 2 && potentialCity.Length <= 50)
            {
                return potentialCity;
            }
        }

        return "Funchal"; // Default
    }

    private string? FormatOpeningHours(List<string>? weekdayText)
    {
        if (weekdayText == null || !weekdayText.Any())
        {
            return null;
        }

        // Join with line breaks or commas for better readability
        return string.Join(", ", weekdayText.Take(7));
    }

    private void ShowEditModal(ShelterDto shelterDto)
    {
        editingShelter = new Shelter
        {
            PartitionKey = shelterDto.ShelterName,
            RowKey = shelterDto.Location,
            Country = shelterDto.Country,
            PhoneNumber = shelterDto.PhoneNumber,
            Address = shelterDto.Address,
            Email = shelterDto.Email,
            Website = shelterDto.Website,
            Facebook = shelterDto.Facebook,
            Instagram = shelterDto.Instagram,
            X = shelterDto.X,
            GoogleMapsLocation = shelterDto.GoogleMapsLocation,
            OpeningTimes = shelterDto.OpeningTimes,
            ETag = shelterDto.OriginalETag
        };
        isEditMode = true;
        isCreatingNew = false;
        showModal = true;
        showViewModal = false;
        extractionComplete = false;
        ClearMessages();
    }

    private void ShowViewModal(ShelterDto shelterDto)
    {
        viewingShelter = shelterDto;
        showViewModal = true;
        ClearMessages();
    }

    private void ShowDeleteConfirmation(ShelterDto shelterDto)
    {
        deletingShelter = shelterDto;
        showDeleteModal = true;
        ClearMessages();
    }

    private void CloseModal()
    {
        showModal = false;
        editingShelter = null;
        googleMapsLink = string.Empty;
        isExtracting = false;
        extractionComplete = false;
        extractionError = null;
        isCreatingNew = false;
    }

    private void CloseViewModal()
    {
        showViewModal = false;
        viewingShelter = null;
    }

    private void CloseDeleteModal()
    {
        showDeleteModal = false;
        deletingShelter = null;
    }

    private void ClearMessages()
    {
        successMessage = null;
        errorMessage = null;
    }

    private async Task SaveShelter()
    {
        if (editingShelter == null) return;

        isSaving = true;
        ClearMessages();
        
        try
        {
            if (isCreatingNew)
            {
                await ShelterService.AddShelterAsync(editingShelter);
                successMessage = $"Shelter {editingShelter.PartitionKey} created successfully";
            }
            else
            {
                await ShelterService.UpdateShelterAsync(editingShelter);
                successMessage = $"Shelter {editingShelter.PartitionKey} updated successfully";
            }
            
            CloseModal();
            await LoadShelters();
            ApplyFilters();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to save shelter: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task ConfirmDelete()
    {
        if (deletingShelter == null || shelters == null) return;

        isDeleting = true;
        try
        {
            await ShelterService.DeleteShelterAsync(deletingShelter.ShelterName, deletingShelter.Location);
            
            successMessage = $"Shelter {deletingShelter.ShelterName} deleted successfully";
            CloseDeleteModal();
            await LoadShelters();
            ApplyFilters();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to delete shelter: {ex.Message}";
        }
        finally
        {
            isDeleting = false;
        }
    }
}