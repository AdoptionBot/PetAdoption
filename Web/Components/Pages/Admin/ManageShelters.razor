@page "/admin/shelters"
@using Microsoft.AspNetCore.Authorization
@using PetAdoption.Services.Interfaces
@using PetAdoption.Data.TableStorage
@using System.ComponentModel.DataAnnotations
@using PetAdoption.Web.Components.Shared
@using PetAdoption.Services.Web
@using Azure
@attribute [Authorize(Policy = "AdminOnly")]
@inject IShelterService ShelterService
@inject IGooglePlacesService GooglePlacesService
@inject IConfiguration Configuration
@inject IHttpClientFactory HttpClientFactory
@inject LocalizationService LocalizationService
@inject DynamicLocalizer<ManageShelters> Localizer
@implements IDisposable
@rendermode InteractiveServer

<PageTitle>@Localizer["PageTitle"]</PageTitle>

<div class="shelter-management-page">
    <div class="container mt-5 mb-5">
        <div class="card shadow">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h3 class="mb-0">@Localizer["ShelterManagement"]</h3>
                <button class="btn btn-light btn-sm" @onclick="ShowCreateModal">
                    <i class="fa fa-plus"></i> @Localizer["AddNewShelter"]
                </button>
            </div>
            <div class="card-body">
                @if (isLoading)
                {
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">@Localizer["Loading"]</span>
                        </div>
                        <p class="mt-3 text-muted">@Localizer["LoadingShelters"]</p>
                    </div>
                }
                else if (shelters != null && shelters.Any())
                {
                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fa fa-check-circle"></i> @successMessage
                            <button type="button" class="btn-close" @onclick="() => successMessage = null" aria-label="Close"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fa fa-exclamation-circle"></i> @errorMessage
                            <button type="button" class="btn-close" @onclick="() => errorMessage = null" aria-label="Close"></button>
                        </div>
                    }

                    <!-- Search and Filter Section -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa fa-search"></i></span>
                                <input type="text" class="form-control" placeholder="@Localizer["SearchShelters"]"
                                       @bind="searchTerm" @bind:event="oninput" @onkeyup="FilterShelters" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <select class="form-select" @onchange="FilterByCountry">
                                <option value="">@Localizer["AllCountries"]</option>
                                @if (availableCountries != null)
                                {
                                    @foreach (var country in availableCountries)
                                    {
                                        <option value="@country">@country</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead class="table-light">
                                <tr>
                                    <th>@Localizer["ShelterName"]</th>
                                    <th>@Localizer["Location"]</th>
                                    <th>@Localizer["Country"]</th>
                                    <th>@Localizer["Contact"]</th>
                                    <th>@Localizer["Email"]</th>
                                    <th class="text-center">@Localizer["Actions"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var shelter in filteredShelters ?? shelters)
                                {
                                    <tr>
                                        <td><strong>@shelter.ShelterName</strong></td>
                                        <td>@shelter.Location</td>
                                        <td>@shelter.Country</td>
                                        <td>@shelter.PhoneNumber</td>
                                        <td>@shelter.Email</td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm" role="group">
                                                <button class="btn btn-outline-primary" title="@Localizer["ViewDetails"]"
                                                        @onclick="() => ShowViewModal(shelter)">
                                                    <i class="fa fa-eye"></i>
                                                </button>
                                                <button class="btn btn-outline-success" title="@Localizer["Edit"]"
                                                        @onclick="() => ShowEditModal(shelter)">
                                                    <i class="fa fa-edit"></i>
                                                </button>
                                                <button class="btn btn-outline-danger" title="@Localizer["Delete"]"
                                                        @onclick="() => ShowDeleteConfirmation(shelter)">
                                                    <i class="fa fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-3 d-flex justify-content-between align-items-center">
                        <p class="text-muted mb-0">
                            <i class="fa fa-home"></i> @Localizer["TotalShelters"] <strong>@shelters.Count()</strong>
                            @if (filteredShelters != null)
                            {
                                <span> | @Localizer["Filtered"] <strong>@filteredShelters.Count()</strong></span>
                            }
                        </p>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <div class="alert alert-info d-inline-block">
                            <i class="fa fa-info-circle"></i> @Localizer["NoSheltersFound"]
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Create Modal (Simplified - Google Maps Link Only) -->
    @if (showModal && !isEditMode)
    {
        <ModalHelper OnClose="CloseModal" ModalId="create-modal" />
        <div id="create-modal" class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-lg modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title">
                            <i class="fa fa-plus-circle"></i> @Localizer["AddNewShelter"]
                        </h5>
                        <button type="button" class="btn-close btn-close-white" @onclick="CloseModal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="alert alert-info">
                            <i class="fa fa-info-circle"></i>
                            <strong>@Localizer["QuickAdd"]</strong> @Localizer["QuickAddMessage"]
                        </div>

                        @if (isExtracting)
                        {
                            <div class="text-center py-4">
                                <div class="spinner-border text-primary mb-3" role="status">
                                    <span class="visually-hidden">@Localizer["Extracting"]</span>
                                </div>
                                <p class="text-muted">@Localizer["ExtractingMessage"]</p>
                            </div>
                        }
                        else if (extractionComplete)
                        {
                            <div class="alert alert-success">
                                <i class="fa fa-check-circle"></i>
                                @Localizer["ExtractionSuccess"]
                            </div>

                            <!-- Preview extracted data -->
                            <div class="card mb-3">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0"><i class="fa fa-eye"></i> @Localizer["ExtractedInformation"]</h6>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p class="mb-2"><strong>@Localizer["Name"]</strong> <span class="text-primary">@editingShelter?.PartitionKey</span></p>
                                            <p class="mb-2"><strong>@Localizer["CityTown"]</strong> <span class="text-primary">@editingShelter?.RowKey</span></p>
                                            <p class="mb-2"><strong>@Localizer["Country"]</strong> <span class="text-primary">@editingShelter?.Country</span></p>
                                            <p class="mb-2"><strong>@Localizer["Address"]</strong> <span class="text-secondary">@(editingShelter?.Address ?? Localizer["NotFound"])</span></p>
                                        </div>
                                        <div class="col-md-6">
                                            <p class="mb-2"><strong>@Localizer["Phone"]</strong> <span class="text-secondary">@(editingShelter?.PhoneNumber ?? Localizer["NotFound"])</span></p>
                                            <p class="mb-2">
                                                <strong>@Localizer["Website"]</strong>
                                                @if (!string.IsNullOrEmpty(editingShelter?.Website))
                                                {
                                                    <a href="@editingShelter.Website" target="_blank" rel="noopener noreferrer">
                                                        @editingShelter.Website <i class="fa fa-external-link-alt fa-xs"></i>
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-secondary">@Localizer["NotFound"]</span>
                                                }
                                            </p>
                                            <p class="mb-0"><strong>@Localizer["OpeningTimes"]</strong></p>
                                            @if (!string.IsNullOrEmpty(editingShelter?.OpeningTimes))
                                            {
                                                <small class="text-secondary d-block mt-1" style="white-space: pre-line;">@editingShelter.OpeningTimes</small>
                                            }
                                            else
                                            {
                                                <span class="text-secondary"><small>@Localizer["NotFound"]</small></span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="mb-3">
                                <label class="form-label">@Localizer["GoogleMapsLink"]</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fa fa-map-marker-alt"></i></span>
                                    <input type="text"
                                           class="form-control"
                                           placeholder="@Localizer["GoogleMapsPlaceholder"]"
                                           @bind="googleMapsLink"
                                           @bind:event="oninput" />
                                </div>
                                <small class="form-text text-muted">
                                    @Localizer["GoogleMapsHelp"]
                                </small>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="d-grid">
                                        <button type="button"
                                                class="btn btn-primary"
                                                @onclick="ExtractShelterInfo"
                                                disabled="@(string.IsNullOrWhiteSpace(googleMapsLink))">
                                            <i class="fa fa-magic"></i> @Localizer["ExtractInformation"]
                                        </button>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-grid">
                                        <button type="button"
                                                class="btn btn-outline-primary"
                                                @onclick="SkipToManualEntry">
                                            <i class="fa fa-keyboard"></i> @Localizer["SkipManualEntry"]
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(extractionError))
                        {
                            <div class="alert alert-warning mt-3">
                                <i class="fa fa-exclamation-triangle"></i> @extractionError
                            </div>
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseModal">
                            <i class="fa fa-times"></i> @Localizer["Cancel"]
                        </button>
                        @if (extractionComplete)
                        {
                            <button type="button" class="btn btn-primary" @onclick="ProceedToEdit" disabled="@isSaving">
                                <i class="fa fa-arrow-right"></i> @Localizer["ContinueToEdit"]
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Edit Modal (Full Form) -->
    @if (showModal && isEditMode)
    {
        <ModalHelper OnClose="CloseModal" ModalId="edit-modal" />
        <div id="edit-modal" class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-lg modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title">
                            <i class="fa fa-edit"></i> @(isCreatingNew? Localizer["CreateShelter"] : Localizer["EditShelter"])
                        </h5>
                        <button type="button" class="btn-close btn-close-white" @onclick="CloseModal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <ValidatedForm Model="editingShelter" OnValidSubmit="SaveShelter">
                            <DataAnnotationsValidator />

                            <!-- Basic Information Section -->
                            <div class="card mb-3">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0"><i class="fa fa-home"></i> @Localizer["BasicInformation"]</h6>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">
                                                @Localizer["ShelterName"]
                                                @if (isCreatingNew)
                                                {
                                                    <span class="text-danger">*</span>
                                                }
                                            </label>
                                            @if (!isCreatingNew)
                                            {
                                                <input type="text" class="form-control" value="@editingShelter!.PartitionKey" disabled />
                                                <small class="text-muted">@Localizer["CannotBeChanged"]</small>
                                            }
                                            else
                                            {
                                                <InputText @bind-Value="editingShelter!.PartitionKey" class="form-control" placeholder="@Localizer["EnterShelterName"]" />
                                                <ValidationMessage For="@(() => editingShelter!.PartitionKey)" class="text-danger" />
                                            }
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">
                                                @Localizer["CityTown"]
                                                @if (isCreatingNew)
                                                {
                                                    <span class="text-danger">*</span>
                                                }
                                            </label>
                                            @if (!isCreatingNew)
                                            {
                                                <input type="text" class="form-control" value="@editingShelter!.RowKey" disabled />
                                                <small class="text-muted">@Localizer["CannotBeChanged"]</small>
                                            }
                                            else
                                            {
                                                <InputText @bind-Value="editingShelter!.RowKey" class="form-control" placeholder="@Localizer["EnterCityTown"]" />
                                                <ValidationMessage For="@(() => editingShelter!.RowKey)" class="text-danger" />
                                            }
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">@Localizer["GoogleMapsLocation"]</label>
                                        <InputText @bind-Value="editingShelter!.GoogleMapsLocation" class="form-control"
                                                   placeholder="@Localizer["GoogleMapsPlaceholder"]" />
                                        <small class="form-text text-muted">@Localizer["FullGoogleMapsUrl"]</small>
                                        <ValidationMessage For="@(() => editingShelter!.GoogleMapsLocation)" class="text-danger" />
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">@Localizer["Country"] <span class="text-danger">*</span></label>
                                            <CountryDropdown @bind-Value="editingShelter!.Country" CssClass="form-select" />
                                            <ValidationMessage For="@(() => editingShelter!.Country)" class="text-danger" />
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">@Localizer["Phone"] <span class="text-danger">*</span></label>
                                            <InputText @bind-Value="editingShelter!.PhoneNumber" class="form-control"
                                                       placeholder="@Localizer["Plus1234567890"]" />
                                            <ValidationMessage For="@(() => editingShelter!.PhoneNumber)" class="text-danger" />
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">@Localizer["Email"] <span class="text-danger">*</span></label>
                                        <InputText @bind-Value="editingShelter!.Email" class="form-control"
                                                   type="email" placeholder="@Localizer["ShelterExampleCom"]" />
                                        <ValidationMessage For="@(() => editingShelter!.Email)" class="text-danger" />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">@Localizer["Address"] <span class="text-danger">*</span></label>
                                        <InputTextArea @bind-Value="editingShelter!.Address" class="form-control" rows="2"
                                                       placeholder="@Localizer["StreetAddressCityStateZip"]" />
                                        <ValidationMessage For="@(() => editingShelter!.Address)" class="text-danger" />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">@Localizer["OpeningTimes"]</label>
                                        <InputTextArea @bind-Value="editingShelter!.OpeningTimes" class="form-control" rows="2"
                                                       placeholder="@Localizer["MonFri900To1800Sat900To1300"]" />
                                        <ValidationMessage For="@(() => editingShelter!.OpeningTimes)" class="text-danger" />
                                    </div>
                                </div>
                            </div>

                            <!-- Social Media Section -->
                            <div class="card mb-3">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0"><i class="fa fa-share-alt"></i> @Localizer["SocialMediaWebsite"]</h6>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label class="form-label">@Localizer["Website"]</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fa fa-globe"></i></span>
                                            <InputText @bind-Value="editingShelter!.Website" class="form-control"
                                                       placeholder="@Localizer["HttpsExampleCom"]" />
                                        </div>
                                        <ValidationMessage For="@(() => editingShelter!.Website)" class="text-danger" />
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">@Localizer["Facebook"]</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fa-brands fa-facebook"></i></span>
                                                <InputText @bind-Value="editingShelter!.Facebook" class="form-control"
                                                           placeholder="@Localizer["HttpsFacebookCom"]" />
                                            </div>
                                            <ValidationMessage For="@(() => editingShelter!.Facebook)" class="text-danger" />
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">@Localizer["Instagram"]</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fa-brands fa-instagram"></i></span>
                                                <InputText @bind-Value="editingShelter!.Instagram" class="form-control"
                                                           placeholder="@Localizer["HttpsInstagramCom"]" />
                                            </div>
                                            <ValidationMessage For="@(() => editingShelter!.Instagram)" class="text-danger" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">@Localizer["X"]</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fa-brands fa-x-twitter"></i></span>
                                                <InputText @bind-Value="editingShelter!.X" class="form-control"
                                                           placeholder="@Localizer["HttpsXCom"]" />
                                            </div>
                                            <ValidationMessage For="@(() => editingShelter!.X)" class="text-danger" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <ValidationSummary class="text-danger" />

                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" @onclick="CloseModal">
                                    <i class="fa fa-times"></i> @Localizer["Cancel"]
                                </button>
                                <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                    @if (isSaving)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                    }
                                    <i class="fa fa-save"></i> @(isCreatingNew? Localizer["CreateShelter"] : Localizer["UpdateShelter"])
                                </button>
                            </div>
                        </ValidatedForm>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- View Details Modal -->
    @if (showViewModal && viewingShelter != null)
    {
        <ModalHelper OnClose="CloseViewModal" ModalId="view-modal" />
        <div id="view-modal" class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title">
                            <i class="fa fa-home"></i> @Localizer["ShelterDetails"]
                        </h5>
                        <button type="button" class="btn-close btn-close-white" @onclick="CloseViewModal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card mb-3">
                                    <div class="card-header bg-light">
                                        <strong>@Localizer["BasicInformation"]</strong>
                                    </div>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item"><strong>@Localizer["Name"]</strong> @viewingShelter.ShelterName</li>
                                        <li class="list-group-item"><strong>@Localizer["Location"]</strong> @viewingShelter.Location</li>
                                        <li class="list-group-item"><strong>@Localizer["Country"]</strong> @viewingShelter.Country</li>
                                        <li class="list-group-item"><strong>@Localizer["Phone"]</strong> @viewingShelter.PhoneNumber</li>
                                        <li class="list-group-item"><strong>@Localizer["Email"]</strong> @viewingShelter.Email</li>
                                        <li class="list-group-item"><strong>@Localizer["Address"]</strong> @viewingShelter.Address</li>
                                        @if (!string.IsNullOrEmpty(viewingShelter.OpeningTimes))
                                        {
                                            <li class="list-group-item"><strong>@Localizer["OpeningTimes"]</strong> @viewingShelter.OpeningTimes</li>
                                        }
                                    </ul>
                                </div>
                                @if (!string.IsNullOrEmpty(viewingShelter.GoogleMapsLocation))
                                {
                                    <div class="card">
                                        <div class="card-header bg-light">
                                            <strong><i class="fa fa-map me-2"></i>@Localizer["GoogleMapsLocation"]</strong>
                                        </div>
                                        <div class="card-body">
                                            <a href="@viewingShelter.GoogleMapsLocation" target="_blank" rel="noopener noreferrer" class="btn btn-success w-100">
                                                <i class="fa fa-directions me-2"></i>@Localizer["OpenInGoogleMaps"]
                                            </a>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="col-md-6">
                                <div class="card mb-3">
                                    <div class="card-header bg-light">
                                        <strong><i class="fa fa-share-alt"></i> @Localizer["SocialMediaWebsite"]</strong>
                                    </div>
                                    <div class="card-body">
                                        @if (!string.IsNullOrEmpty(viewingShelter.Website) ||
                                                                            !string.IsNullOrEmpty(viewingShelter.Facebook) ||
                                                                            !string.IsNullOrEmpty(viewingShelter.Instagram) ||
                                                                            !string.IsNullOrEmpty(viewingShelter.X))
                                        {
                                            @if (!string.IsNullOrEmpty(viewingShelter.Website))
                                            {
                                                <div class="mb-3">
                                                    <div class="d-flex align-items-center">
                                                        <div class="flex-shrink-0" style="width: 32px;">
                                                            <i class="fa fa-globe fa-lg text-primary"></i>
                                                        </div>
                                                        <div class="flex-grow-1 ms-3">
                                                            <small class="text-muted d-block mb-1">@Localizer["Website"]</small>
                                                            <a href="@viewingShelter.Website" target="_blank" rel="noopener noreferrer" class="text-decoration-none text-break">
                                                                @viewingShelter.Website <i class="fa fa-external-link-alt fa-xs ms-1"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                            @if (!string.IsNullOrEmpty(viewingShelter.Facebook))
                                            {
                                                <div class="mb-3">
                                                    <div class="d-flex align-items-center">
                                                        <div class="flex-shrink-0" style="width: 32px;">
                                                            <i class="fa-brands fa-facebook fa-lg text-primary"></i>
                                                        </div>
                                                        <div class="flex-grow-1 ms-3">
                                                            <small class="text-muted d-block mb-1">@Localizer["Facebook"]</small>
                                                            <a href="@viewingShelter.Facebook" target="_blank" rel="noopener noreferrer" class="text-decoration-none text-break">
                                                                @viewingShelter.Facebook <i class="fa fa-external-link-alt fa-xs ms-1"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                            @if (!string.IsNullOrEmpty(viewingShelter.Instagram))
                                            {
                                                <div class="mb-3">
                                                    <div class="d-flex align-items-center">
                                                        <div class="flex-shrink-0" style="width: 32px;">
                                                            <i class="fa-brands fa-instagram fa-lg text-danger"></i>
                                                        </div>
                                                        <div class="flex-grow-1 ms-3">
                                                            <small class="text-muted d-block mb-1">@Localizer["Instagram"]</small>
                                                            <a href="@viewingShelter.Instagram" target="_blank" rel="noopener noreferrer" class="text-decoration-none text-break">
