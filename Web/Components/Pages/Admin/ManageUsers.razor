@page "/admin/users"
@using Microsoft.AspNetCore.Authorization
@using PetAdoption.Services.Interfaces
@using PetAdoption.Data.TableStorage
@using System.ComponentModel.DataAnnotations
@using PetAdoption.Web.Components.Shared
@using PetAdoption.Services.Web
@using Azure
@attribute [Authorize(Policy = "AdminOnly")]
@inject IUserService UserService
@inject IShelterService ShelterService
@inject IConfiguration Configuration
@inject LocalizationService LocalizationService
@inject DynamicLocalizer<ManageUsers> Localizer
@inject IStringLocalizer<SharedEnumResources> EnumLocalizer
@implements IDisposable
@rendermode InteractiveServer

<PageTitle>@Localizer["PageTitle"]</PageTitle>

<div class="user-management-page">
    <div class="container mt-5 mb-5">
        <div class="card shadow">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h3 class="mb-0">@Localizer["UserManagement"]</h3>
                <button class="btn btn-light btn-sm" @onclick="ShowCreateModal">
                    <i class="fa fa-plus"></i> @Localizer["AddNewUser"]
                </button>
            </div>
            <div class="card-body">
                @if (isLoading)
                {
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">@Localizer["Loading"]</span>
                        </div>
                        <p class="mt-3 text-muted">@Localizer["LoadingUsers"]</p>
                    </div>
                }
                else if (userWithShelters != null && userWithShelters.Any())
                {
                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fa fa-check-circle"></i> @successMessage
                            <button type="button" class="btn-close" @onclick="() => successMessage = null" aria-label="Close">
                            </button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fa fa-exclamation-circle"></i> @errorMessage
                            <button type="button" class="btn-close" @onclick="() => errorMessage = null" aria-label="Close">
                            </button>
                        </div>
                    }

                    <!-- Search and Filter Section -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa fa-search"></i></span>
                                <input type="text" class="form-control" placeholder="@Localizer["SearchUsers"]" 
                                       @bind="searchTerm" @bind:event="oninput" @onkeyup="FilterUsers" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" @onchange="FilterByRole">
                                <option value="">@Localizer["AllRoles"]</option>
                                @foreach (var (value, display) in EnumLocalizationExtensions.GetLocalizedValues<UserRole>(EnumLocalizer))
                                {
                                    <option value="@value">@display</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" @onchange="FilterByStatus">
                                <option value="">@Localizer["AllStatus"]</option>
                                <option value="active">@Localizer["Active"]</option>
                                <option value="disabled">@Localizer["Disabled"]</option>
                            </select>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead class="table-light">
                                <tr>
                                    <th>@Localizer["UserName"]</th>
                                    <th>@Localizer["Email"]</th>
                                    <th>@Localizer["Phone"]</th>
                                    <th>@Localizer["Shelter"]</th>
                                    <th>@Localizer["Role"]</th>
                                    <th>@Localizer["Status"]</th>
                                    <th class="text-center">@Localizer["Actions"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in filteredUsers ?? userWithShelters)
                                {
                                    <tr>
                                        <td>
                                            <strong>@item.UserName</strong>
                                            @if (item.IsFoster)
                                            {
                                                <text>&nbsp;</text><span class="badge bg-info ms-1">@Localizer["Foster"]</span>
                                            }
                                        </td>
                                        <td>@item.Email</td>
                                        <td>@item.PhoneNumber</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.ShelterName))
                                            {
                                                <div>
                                                    <strong>@item.ShelterName</strong><br />
                                                    <small class="text-muted">@item.ShelterLocation</small>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge @GetRoleBadgeClass(item.Role)">
                                                @item.Role.ToLocalizedString(EnumLocalizer)
                                            </span>
                                        </td>
                                        <td>
                                            @if (item.IsAccountDisabled)
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="fa fa-ban"></i> @Localizer["Disabled"]
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fa fa-check"></i> @Localizer["Active"]
                                                </span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm" role="group">
                                                <button class="btn btn-outline-primary action-view" title="@Localizer["ViewDetails"]"
                                                        @onclick="() => ShowViewModal(item)">
                                                    <i class="fa fa-eye"></i>
                                                </button>
                                                <button class="btn btn-outline-success action-edit" title="@Localizer["Edit"]"
                                                        @onclick="() => ShowEditModal(item)">
                                                    <i class="fa fa-edit"></i>
                                                </button>
                                                <button class="btn btn-outline-@(item.IsAccountDisabled ? "success" : "warning") action-toggle" 
                                                        title="@(item.IsAccountDisabled ? Localizer["Enable"] : Localizer["Disable"])"
                                                        @onclick="() => ToggleUserStatus(item)">
                                                    <i class="fa fa-@(item.IsAccountDisabled ? "check" : "ban")"></i>
                                                </button>
                                                <button class="btn btn-outline-danger action-delete" title="@Localizer["Delete"]"
                                                        @onclick="() => ShowDeleteConfirmation(item)">
                                                    <i class="fa fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-3 d-flex justify-content-between align-items-center">
                        <p class="text-muted mb-0">
                            <i class="fa fa-users"></i> @Localizer["TotalUsers"] <strong>@userWithShelters.Count()</strong>
                            @if (filteredUsers != null)
                            {
                                <span> | @Localizer["Filtered"] <strong>@filteredUsers.Count()</strong></span>
                            }
                        </p>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <div class="alert alert-info d-inline-block">
                            <i class="fa fa-info-circle"></i> @Localizer["NoUsersFound"]
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Create/Edit Modal -->
    @if (showModal)
    {
        <ModalHelper OnClose="CloseModal" ModalId="edit-modal" />
        <div id="edit-modal" class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-lg modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title">
                            <i class="fa fa-@(isEditMode ? "edit" : "plus-circle")"></i>
                            @(isEditMode ? Localizer["EditUser"] : Localizer["CreateNewUser"])
                        </h5>
                        <button type="button" class="btn-close btn-close-white" @onclick="CloseModal" aria-label="Close">
                        </button>
                    </div>
                    <div class="modal-body">
                        <ValidatedForm Model="editingUser" OnValidSubmit="SaveUser" IsModal="true" ModalId="edit-modal">
                            <DataAnnotationsValidator />
                            
                            <!-- Basic Information Section -->
                            <div class="card mb-3">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0"><i class="fa fa-user"></i> @Localizer["BasicInformation"]</h6>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">
                                                @Localizer["UserName"]
                                                @if (!isEditMode)
                                                {
                                                    <span class="text-danger">*</span>
                                                }
                                            </label>
                                            @if (isEditMode)
                                            {
                                                <input type="text" class="form-control" value="@editingUser!.PartitionKey" disabled />
                                            }
                                            else
                                            {
                                                <InputText @bind-Value="editingUser!.PartitionKey" class="form-control" placeholder="@Localizer["EnterUserName"]" />
                                                <ValidationMessage For="@(() => editingUser!.PartitionKey)" class="text-danger" />
                                            }
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">
                                                @Localizer["Email"]
                                                @if (!isEditMode)
                                                {
                                                    <span class="text-danger">*</span>
                                                }
                                            </label>
                                            @if (isEditMode)
                                            {
                                                <input type="email" class="form-control" value="@editingUser!.RowKey" disabled />
                                            }
                                            else
                                            {
                                                <InputText @bind-Value="editingUser!.RowKey" class="form-control" type="email" placeholder="@Localizer["UserEmailPlaceholder"]" />
                                                <ValidationMessage For="@(() => editingUser!.RowKey)" class="text-danger" />
                                            }
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">@Localizer["PhoneNumber"] <span class="text-danger">*</span></label>
                                            <InputText @bind-Value="editingUser!.PhoneNumber" class="form-control" 
                                                       placeholder="@Localizer["Plus1234567890"]" />
                                            <ValidationMessage For="@(() => editingUser!.PhoneNumber)" class="text-danger" />
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">@Localizer["Country"] <span class="text-danger">*</span></label>
                                            <CountryDropdown @bind-Value="editingUser!.Country" CssClass="form-select" />
                                            <ValidationMessage For="@(() => editingUser!.Country)" class="text-danger" />
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">@Localizer["Address"] <span class="text-danger">*</span></label>
                                        <InputTextArea @bind-Value="editingUser!.Address" class="form-control" rows="2" 
                                                       placeholder="@Localizer["StreetAddressCityStateZip"]" />
                                        <ValidationMessage For="@(() => editingUser!.Address)" class="text-danger" />
                                    </div>
                                </div>
                            </div>

                            <!-- Account Settings Section -->
                            <div class="card mb-3">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0"><i class="fa fa-cog"></i> @Localizer["AccountSettings"]</h6>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">@Localizer["Role"] <span class="text-danger">*</span></label>
                                            <EnumSelect TEnum="UserRole" @bind-Value="editingUser!.Role" CssClass="form-select" />
                                            <ValidationMessage For="@(() => editingUser!.Role)" class="text-danger" />
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">@Localizer["AccountStatus"]</label>
                                            <div class="form-check form-switch mt-2">
                                                <InputCheckbox @bind-Value="editingUser!.IsAccountDisabled" 
                                                              class="form-check-input" id="accountDisabled" />
                                                <label class="form-check-label" for="accountDisabled">
                                                    @Localizer["AccountDisabled"]
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <div class="form-check form-switch">
                                                <InputCheckbox @bind-Value="editingUser!.IsFoster" 
                                                              class="form-check-input" id="isFoster" />
                                                <label class="form-check-label" for="isFoster">
                                                    <i class="fa fa-heart"></i> @Localizer["IsFoster"]
                                                </label>
                                            </div>
                                        </div>
                                        @if (isEditMode)
                                        {
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label">@Localizer["ProfileStatus"]</label>
                                                <div class="form-check form-switch mt-2">
                                                    <input type="checkbox" class="form-check-input" id="profileCompleted"
                                                           checked="@editingUser!.IsProfileCompleted" disabled />
                                                    <label class="form-check-label" for="profileCompleted">
                                                        @Localizer["ProfileCompleted"]
                                                    </label>
                                                </div>
                                                <small class="form-text text-muted">@Localizer["ProfileCompletedHelp"]</small>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>

                            <!-- Shelter Association Section -->
                            <div class="card mb-3">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0"><i class="fa fa-home"></i> @Localizer["ShelterAssociation"]</h6>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label class="form-label">@Localizer["SelectShelter"]</label>
                                        <select class="form-select" @onchange="OnShelterSelectionChanged">
                                            <option value="">@Localizer["None"]</option>
                                            @if (availableShelters != null)
                                            {
                                                @foreach (var shelter in availableShelters)
                                                {
                                                    var shelterKey = $"{shelter.PartitionKey}|{shelter.RowKey}";
                                                    var isSelected = editingUser?.ShelterName == shelter.PartitionKey && 
                                                                    editingUser?.ShelterLocation == shelter.RowKey;
                                                    <option value="@shelterKey" selected="@isSelected">
                                                        @shelter.PartitionKey - @shelter.RowKey
                                                    </option>
                                                }
                                            }
                                        </select>
                                        <small class="form-text text-muted">@Localizer["SelectShelterHelp"]</small>
                                    </div>
                                    @if (!string.IsNullOrEmpty(editingUser?.ShelterName))
                                    {
                                        <div class="alert alert-info">
                                            <strong>@Localizer["SelectedShelter"]</strong> @editingUser.ShelterName<br />
                                            <strong>@Localizer["Location"]</strong> @editingUser.ShelterLocation
                                        </div>
                                    }
                                </div>
                            </div>

                            <!-- Social Media Section -->
                            <div class="card mb-3">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0"><i class="fa fa-share-alt"></i> @Localizer["SocialMediaWebsite"]</h6>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label class="form-label">@Localizer["Website"]</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fa fa-globe"></i></span>
                                            <InputText @bind-Value="editingUser!.Website" class="form-control" 
                                                       placeholder="@Localizer["HttpsExampleCom"]" />
                                        </div>
                                        <ValidationMessage For="@(() => editingUser!.Website)" class="text-danger" />
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">@Localizer["Facebook"]</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fa-brands fa-facebook"></i></span>
                                                <InputText @bind-Value="editingUser!.Facebook" class="form-control" 
                                                           placeholder="@Localizer["HttpsFacebookCom"]" />
                                            </div>
                                            <ValidationMessage For="@(() => editingUser!.Facebook)" class="text-danger" />
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">@Localizer["Instagram"]</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fa-brands fa-instagram"></i></span>
                                                <InputText @bind-Value="editingUser!.Instagram" class="form-control" 
                                                           placeholder="@Localizer["HttpsInstagramCom"]" />
                                            </div>
                                            <ValidationMessage For="@(() => editingUser!.Instagram)" class="text-danger" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">@Localizer["X"]</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fa-brands fa-x-twitter"></i></span>
                                                <InputText @bind-Value="editingUser!.X" class="form-control"
                                                           placeholder="@Localizer["HttpsXCom"]" />
                                            </div>
                                            <ValidationMessage For="@(() => editingUser!.X)" class="text-danger" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <ValidationSummary class="text-danger" />
                            
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" @onclick="CloseModal">
                                    <i class="fa fa-times"></i> @Localizer["Cancel"]
                                </button>
                                <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                    @if (isSaving)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                    }
                                    <i class="fa fa-save"></i> @(isEditMode ? Localizer["UpdateUser"] : Localizer["CreateUser"])
                                </button>
                            </div>
                        </ValidatedForm>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- View Details Modal -->
    @if (showViewModal && viewingUser != null)
    {
        <ModalHelper OnClose="CloseViewModal" ModalId="view-modal" />
        <div id="view-modal" class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title">
                            <i class="fa fa-user-circle"></i> @Localizer["UserDetails"]
                        </h5>
                        <button type="button" class="btn-close btn-close-white" @onclick="CloseViewModal" aria-label="Close">
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card mb-3">
                                    <div class="card-header bg-light">
                                        <strong>@Localizer["BasicInformation"]</strong>
                                    </div>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item"><strong>@Localizer["Name"]</strong> @viewingUser.UserName</li>
                                        <li class="list-group-item"><strong>@Localizer["Email"]</strong> @viewingUser.Email</li>
                                        <li class="list-group-item"><strong>@Localizer["Phone"]</strong> @viewingUser.PhoneNumber</li>
                                        <li class="list-group-item"><strong>@Localizer["Country"]</strong> @viewingUser.Country</li>
                                        <li class="list-group-item"><strong>@Localizer["Address"]</strong> @viewingUser.Address</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card mb-3">
                                    <div class="card-header bg-light">
                                        <strong>@Localizer["AccountInformation"]</strong>
                                    </div>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item">
                                            <strong>@Localizer["Role"]</strong> 
                                            <span class="badge @GetRoleBadgeClass(viewingUser.Role) ms-2">@viewingUser.Role.ToLocalizedString(EnumLocalizer)</span>
                                        </li>
                                        <li class="list-group-item">
                                            <strong>@Localizer["Status"]</strong> 
                                            <span class="badge @(viewingUser.IsAccountDisabled ? "bg-danger" : "bg-success") ms-2">
                                                @(viewingUser.IsAccountDisabled ? Localizer["Disabled"] : Localizer["Active"])
                                            </span>
                                        </li>
                                        <li class="list-group-item">
                                            <strong>@Localizer["Foster"]</strong> 
                                            <span class="badge @(viewingUser.IsFoster ? "bg-info" : "bg-secondary") ms-2">
                                                @(viewingUser.IsFoster ? Localizer["Yes"] : Localizer["No"])
                                            </span>
                                        </li>
                                        <li class="list-group-item">
                                            <strong>@Localizer["ProfileStatus"]</strong> 
                                            <span class="badge @(viewingUser.IsProfileCompleted ? "bg-success" : "bg-warning") ms-2">
                                                @(viewingUser.IsProfileCompleted ? Localizer["Complete"] : Localizer["Incomplete"])
                                            </span>
                                        </li>
                                        @if (viewingUser.LastUpdated.HasValue)
                                        {
                                            <li class="list-group-item">
                                                <strong>@Localizer["LastUpdated"]</strong> @viewingUser.LastUpdated.Value.ToString("g")
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(viewingUser.ShelterName))
                        {
                            <div class="card mb-3">
                                <div class="card-header bg-light">
                                    <strong><i class="fa fa-home"></i> @Localizer["ShelterInformation"]</strong>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item"><strong>@Localizer["ShelterName"]</strong> @viewingUser.ShelterName</li>
                                    <li class="list-group-item"><strong>@Localizer["Location"]</strong> @viewingUser.ShelterLocation</li>
                                </ul>
                            </div>
                        }

                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <strong><i class="fa fa-share-alt"></i> @Localizer["SocialMediaWebsite"]</strong>
                            </div>
                            <div class="card-body">
                                @if (!string.IsNullOrEmpty(viewingUser.Website) || 
                                     !string.IsNullOrEmpty(viewingUser.Facebook) || 
                                     !string.IsNullOrEmpty(viewingUser.Instagram) || 
                                     !string.IsNullOrEmpty(viewingUser.X))
                                {
                                    <div class="row">
                                        @if (!string.IsNullOrEmpty(viewingUser.Website))
                                        {
                                            <div class="col-md-6 mb-3">
                                                <div class="d-flex align-items-center">
                                                    <div class="flex-shrink-0" style="width: 32px;">
                                                        <i class="fa fa-globe fa-lg text-primary"></i>
                                                    </div>
                                                    <div class="flex-grow-1 ms-3">
                                                        <small class="text-muted d-block mb-1">@Localizer["Website"]</small>
                                                        <a href="@viewingUser.Website" target="_blank" rel="noopener noreferrer" class="text-decoration-none text-break">
                                                            @viewingUser.Website <i class="fa fa-external-link-alt fa-xs ms-1"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        @if (!string.IsNullOrEmpty(viewingUser.Facebook))
                                        {
                                            <div class="col-md-6 mb-3">
                                                <div class="d-flex align-items-center">
                                                    <div class="flex-shrink-0" style="width: 32px;">
                                                        <i class="fa-brands fa-facebook fa-lg text-primary"></i>
                                                    </div>
                                                    <div class="flex-grow-1 ms-3">
                                                        <small class="text-muted d-block mb-1">@Localizer["Facebook"]</small>
                                                        <a href="@viewingUser.Facebook" target="_blank" rel="noopener noreferrer" class="text-decoration-none text-break">
                                                            @viewingUser.Facebook <i class="fa fa-external-link-alt fa-xs ms-1"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        @if (!string.IsNullOrEmpty(viewingUser.Instagram))
                                        {
                                            <div class="col-md-6 mb-3">
                                                <div class="d-flex align-items-center">
                                                    <div class="flex-shrink-0" style="width: 32px;">
                                                        <i class="fa-brands fa-instagram fa-lg text-danger"></i>
                                                    </div>
                                                    <div class="flex-grow-1 ms-3">
                                                        <small class="text-muted d-block mb-1">@Localizer["Instagram"]</small>
                                                        <a href="@viewingUser.Instagram" target="_blank" rel="noopener noreferrer" class="text-decoration-none text-break">
                                                            @viewingUser.Instagram <i class="fa fa-external-link-alt fa-xs ms-1"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        @if (!string.IsNullOrEmpty(viewingUser.X))
                                        {
                                            <div class="col-md-6 mb-3">
