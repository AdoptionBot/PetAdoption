            carouselMedia.Add(new CarouselMediaItem { Url = selectedPet.Image1Url, IsVideo = false });
        if (!string.IsNullOrEmpty(selectedPet.Image2Url))
            carouselMedia.Add(new CarouselMediaItem { Url = selectedPet.Image2Url, IsVideo = false });
        if (!string.IsNullOrEmpty(selectedPet.Image3Url))
            carouselMedia.Add(new CarouselMediaItem { Url = selectedPet.Image3Url, IsVideo = false });
        if (!string.IsNullOrEmpty(selectedPet.Image4Url))
            carouselMedia.Add(new CarouselMediaItem { Url = selectedPet.Image4Url, IsVideo = false });
        if (!string.IsNullOrEmpty(selectedPet.Video1Url))
            carouselMedia.Add(new CarouselMediaItem { Url = selectedPet.Video1Url, IsVideo = true });

        if (carouselMedia.Any())
        {
            currentCarouselIndex = Math.Min(startIndex, carouselMedia.Count - 1);
            showImageViewer = true;
            StateHasChanged();

            // Focus the overlay element to enable immediate keyboard navigation
            await Task.Delay(50); // Small delay to ensure DOM is rendered
            try
            {
                await carouselOverlayElement.FocusAsync();
            }
            catch (Exception ex)
            {
                Logger.LogWarning(ex, "Failed to focus carousel overlay element");
            }
        }
    }

    private void CloseImageViewer()
    {
        showImageViewer = false;
        carouselMedia.Clear();
        currentCarouselIndex = 0;
        StateHasChanged();
    }

    private void NextImage()
    {
        if (carouselMedia.Count > 0)
        {
            // Circular navigation: go to first item when at the end
            currentCarouselIndex = (currentCarouselIndex + 1) % carouselMedia.Count;
            StateHasChanged();
        }
    }

    private void PreviousImage()
    {
        if (carouselMedia.Count > 0)
        {
            // Circular navigation: go to last item when at the beginning
            currentCarouselIndex = (currentCarouselIndex - 1 + carouselMedia.Count) % carouselMedia.Count;
            StateHasChanged();
        }
    }

    private void HandleCarouselKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "ArrowLeft")
        {
            PreviousImage();
        }
        else if (e.Key == "ArrowRight")
        {
            NextImage();
        }
        else if (e.Key == "Escape")
        {
            CloseImageViewer();
        }
    }
