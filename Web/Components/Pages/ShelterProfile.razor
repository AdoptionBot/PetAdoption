@page "/shelter"
@using Microsoft.AspNetCore.Authorization
@using PetAdoption.Services.Interfaces
@using PetAdoption.Data.TableStorage
@using PetAdoption.Data.TableStorage.Enums
@using PetAdoption.Web.Components.Shared
@using PetAdoption.Services.Web
@attribute [Authorize(Roles = "Shelter,Admin")]
@inject IUserService UserService
@inject IShelterService ShelterService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IJSRuntime JSRuntime
@inject LocalizationService LocalizationService
@inject DynamicLocalizer<ShelterProfile> Localizer
@implements IDisposable
@rendermode InteractiveServer

<PageTitle>@Localizer["PageTitle"]</PageTitle>

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">@Localizer["ShelterRegistration"]</h3>
                </div>
                <div class="card-body p-4">
                    @if (isLoading)
                    {
                        <div class="text-center">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">@Localizer["Loading"]</span>
                            </div>
                        </div>
                    }
                    else if (currentShelter != null)
                    {
                        <ValidatedForm Model="currentShelter" OnValidSubmit="HandleValidSubmit" ScrollToTopOnValidation="true">
                            <DataAnnotationsValidator />
                            <ValidationSummary class="alert alert-danger" />

                            @if (!string.IsNullOrEmpty(successMessage))
                            {
                                <div class="alert alert-success">@successMessage</div>
                            }

                            @if (!string.IsNullOrEmpty(errorMessage))
                            {
                                <div class="alert alert-danger">@errorMessage</div>
                            }

                            <div class="mb-4">
                                <h5 class="border-bottom pb-2">@Localizer["ShelterInformation"]</h5>

                                <div class="mb-3">
                                    <label class="form-label">
                                        @Localizer["ShelterName"]
                                        @if (!IsExistingShelter)
                                        {
                                            <span class="text-danger">*</span>
                                        }
                                    </label>
                                    @if (IsExistingShelter)
                                    {
                                        <input type="text" class="form-control" value="@currentShelter.PartitionKey" disabled />
                                    }
                                    else
                                    {
                                        <InputText @bind-Value="currentShelter.PartitionKey" class="form-control" />
                                        <ValidationMessage For="@(() => currentShelter.PartitionKey)" />
                                    }
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">
                                        @Localizer["ShelterCityTown"]
                                        @if (!IsExistingShelter)
                                        {
                                            <span class="text-danger">*</span>
                                        }
                                    </label>
                                    @if (IsExistingShelter)
                                    {
                                        <input type="text" class="form-control" value="@currentShelter.RowKey" disabled />
                                    }
                                    else
                                    {
                                        <InputText @bind-Value="currentShelter.RowKey" class="form-control" />
                                        <ValidationMessage For="@(() => currentShelter.RowKey)" />
                                    }
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">@Localizer["Country"] <span class="text-danger">*</span></label>
                                    <CountryDropdown @bind-Value="currentShelter.Country" CssClass="form-select" />
                                    <ValidationMessage For="@(() => currentShelter.Country)" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">@Localizer["PhoneNumber"] <span class="text-danger">*</span></label>
                                    <InputText @bind-Value="currentShelter.PhoneNumber" class="form-control" />
                                    <ValidationMessage For="@(() => currentShelter.PhoneNumber)" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">@Localizer["Address"] <span class="text-danger">*</span></label>
                                    <InputTextArea @bind-Value="currentShelter.Address" class="form-control" rows="3" />
                                    <ValidationMessage For="@(() => currentShelter.Address)" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">@Localizer["Email"] <span class="text-danger">*</span></label>
                                    <InputText @bind-Value="currentShelter.Email" class="form-control" type="email" />
                                    <ValidationMessage For="@(() => currentShelter.Email)" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">@Localizer["GoogleMapsLocation"]</label>
                                    <InputText @bind-Value="currentShelter.GoogleMapsLocation" class="form-control" placeholder="@Localizer["GoogleMapsPlaceholder"]" />
                                    <small class="form-text text-muted">@Localizer["GoogleMapsHelp"]</small>
                                    <ValidationMessage For="@(() => currentShelter.GoogleMapsLocation)" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">@Localizer["OpeningTimes"]</label>
                                    <InputTextArea @bind-Value="currentShelter.OpeningTimes" class="form-control" rows="2" 
                                                   placeholder="@Localizer["OpeningTimesPlaceholder"]" />
                                    <ValidationMessage For="@(() => currentShelter.OpeningTimes)" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">@Localizer["Website"]</label>
                                    <InputText @bind-Value="currentShelter.Website" class="form-control" />
                                    <ValidationMessage For="@(() => currentShelter.Website)" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">@Localizer["Facebook"]</label>
                                    <InputText @bind-Value="currentShelter.Facebook" class="form-control" />
                                    <ValidationMessage For="@(() => currentShelter.Facebook)" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">@Localizer["Instagram"]</label>
                                    <InputText @bind-Value="currentShelter.Instagram" class="form-control" />
                                    <ValidationMessage For="@(() => currentShelter.Instagram)" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">@Localizer["X"]</label>
                                    <InputText @bind-Value="currentShelter.X" class="form-control" />
                                    <ValidationMessage For="@(() => currentShelter.X)" />
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg" disabled="@isSaving">
                                    @if (isSaving)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                    }
                                    @Localizer["SaveShelter"]
                                </button>
                            </div>
                        </ValidatedForm>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            @Localizer["UnableToLoadShelter"]
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private Shelter? currentShelter;
    private User? currentUser;
    private bool isLoading = true;
    private bool isSaving = false;
    private string? successMessage;
    private string? errorMessage;

    private bool IsExistingShelter => !string.IsNullOrEmpty(currentShelter?.ETag.ToString()) 
                                       && currentShelter.ETag != default;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity?.IsAuthenticated == true)
            {
                var email = user.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value;
                if (!string.IsNullOrEmpty(email))
                {
                    currentUser = await UserService.GetUserByEmailAsync(email);
                    if (currentUser != null)
                    {
                        // Check if user has shelter data
                        if (!string.IsNullOrEmpty(currentUser.ShelterName) && !string.IsNullOrEmpty(currentUser.ShelterLocation))
                        {
                            // Try to load existing shelter
                            currentShelter = await ShelterService.GetShelterAsync(currentUser.ShelterName, currentUser.ShelterLocation);
                        }

                        // Initialize empty shelter if not loaded
                        if (currentShelter == null)
                        {
                            currentShelter = new Shelter();
                        }
                    }
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = Localizer["ErrorLoadingShelter"] + ex.Message;
        }
        finally
        {
            isLoading = false;
        }

        // Subscribe to culture change
        LocalizationService.OnCultureChanged += OnCultureChanged;
    }

    private void OnCultureChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        LocalizationService.OnCultureChanged -= OnCultureChanged;
    }

    private async Task HandleValidSubmit()
    {
        if (currentShelter == null || currentUser == null) return;

        isSaving = true;
        successMessage = null;
        errorMessage = null;

        try
        {
            // Save shelter entity
            if (string.IsNullOrEmpty(currentShelter.ETag.ToString()) || currentShelter.ETag == default)
            {
                await ShelterService.AddShelterAsync(currentShelter);
            }
            else
            {
                await ShelterService.UpdateShelterAsync(currentShelter);
            }

            // Update user with shelter reference
            currentUser.ShelterName = currentShelter.PartitionKey;
            currentUser.ShelterLocation = currentShelter.RowKey;
            currentUser.Role = UserRole.Shelter;

            await UserService.UpdateUserAsync(currentUser);

            successMessage = Localizer["ShelterSavedSuccess"];
        }
        catch (Exception ex)
        {
            errorMessage = Localizer["ErrorSavingShelter"] + ex.Message;
        }
        finally
        {
            isSaving = false;
        }
    }
}