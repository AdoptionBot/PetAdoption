                        <span class="fa fa-paper-plane mr-1"></span> @organizationEmail
                    </a>
                </p>
                <div class="social-media">
                    <p class="mb-0 d-flex">
                        <a href="@facebookUrl" target="_blank" rel="noopener noreferrer" class="d-flex align-items-center justify-content-center">
                            <span class="fa-brands fa-facebook"><i class="sr-only">Facebook</i></span>
                        </a>
                        <a href="@xUrl" target="_blank" rel="noopener noreferrer" class="d-flex align-items-center justify-content-center">
                            <span class="fa-brands fa-x-twitter"><i class="sr-only">X</i></span>
                        </a>
                        <a href="@instagramUrl" target="_blank" rel="noopener noreferrer" class="d-flex align-items-center justify-content-center">
                            <span class="fa-brands fa-instagram"><i class="sr-only">Instagram</i></span>
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hero Section with Login Integration -->
<div class="hero-wrap js-fullheight" style="background-image: url('images/bg_1.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-11 ftco-animate text-center">
                <h1 class="mb-4">@Localizer["HeroTitle"]</h1>
                <p class="mb-5">@Localizer["HeroSubtitle"]</p>
                
                <AuthorizeView>
                    <Authorized>
                        @if (currentUserRole == UserRole.User || currentUserRole == UserRole.Foster)
                        {
                            <div class="hero-cta-buttons">
                                <a href="/pets" class="btn btn-primary mr-md-3 py-3 px-5">
                                    <span class="fa fa-paw mr-2"></span>@Localizer["BrowsePets"]
                                </a>
                                <a href="/adoptions" class="btn btn-white py-3 px-5">
                                    <span class="fa fa-heart mr-2"></span>@Localizer["MyAdoptions"]
                                </a>
                            </div>
                            <p class="mt-4 text-white">
                                <small>@Localizer["WelcomeUser", context.User.Identity?.Name ?? ""]</small>
                            </p>
                        }
                        else if (currentUserRole == UserRole.Shelter)
                        {
                            <div class="hero-cta-buttons">
                                <a href="/adoptions" class="btn btn-primary mr-md-3 py-3 px-5">
                                    <span class="fa fa-clipboard-list mr-2"></span>@Localizer["AdoptionRequests"]
                                </a>
                                <a href="/mypets" class="btn btn-white py-3 px-5">
                                    <span class="fa fa-paw mr-2"></span>@Localizer["ManageMyPets"]
                                </a>
                            </div>
                            <p class="mt-4 text-white">
                                <small>@Localizer["WelcomeShelter", context.User.Identity?.Name ?? ""]</small>
                            </p>
                        }
                        else
                        {
                            <div class="hero-cta-buttons">
                                <a href="/profile" class="btn btn-primary mr-md-3 py-3 px-5">
                                    <span class="fa fa-user mr-2"></span>@Localizer["MyProfile"]
                                </a>
                                <a href="/pets" class="btn btn-white py-3 px-5">
                                    @Localizer["BrowsePets"] <span class="ion-ios-arrow-forward"></span>
                                </a>
                            </div>
                            <p class="mt-4 text-white">
                                <small>@Localizer["WelcomeGeneral", context.User.Identity?.Name ?? ""]</small>
                            </p>
                        }
                    </Authorized>
                    <NotAuthorized>
                        <div class="hero-cta-buttons">
                            <a href="/pets" class="btn btn-primary mr-md-3 py-3 px-5">
                                <span class="fa fa-paw mr-2"></span>@Localizer["BrowseAvailablePets"]
                            </a>
                            <a href="/login" class="btn btn-white py-3 px-5">
                                <span class="fa fa-sign-in-alt mr-2"></span>@Localizer["SignInToAdopt"]
                            </a>
                        </div>
                        
                        <div class="login-providers mt-5 pt-4">
                            <p class="text-white mb-3">@Localizer["QuickSignIn"]</p>
                            <div class="d-flex justify-content-center gap-3">
                                <a href="/signin-google" class="btn btn-sm btn-outline-light px-4 py-2" title="@Localizer["SignInWithGoogle"]">
                                    <span class="fa fa-google fa-lg"></span>
                                </a>
                                <a href="/signin-microsoft" class="btn btn-sm btn-outline-light px-4 py-2" title="@Localizer["SignInWithMicrosoft"]">
                                    <span class="fa fa-windows fa-lg"></span>
                                </a>
                            </div>
                        </div>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>
    </div>
</div>

