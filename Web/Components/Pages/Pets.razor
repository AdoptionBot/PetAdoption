@code {
    private List<Pet> allPets = new();
    private List<Pet> currentPagePets = new();
    private bool isLoading = true;
    private string? errorMessage;
    private string? successMessage;

    private int currentPage = 1;
    private const int pageSize = 12;
    private int totalPages = 1;

    private Pet? selectedPet;
    private bool showDetailModal = false;

    private Pet? petForAdoption;
    private bool showAdoptionModal = false;
    private bool isCheckingApplication = false;
    private string adoptionNotes = string.Empty;
    private string? adoptionCheckMessage;

    private bool isUserAuthenticated = false;
    private UserRole currentUserRole = UserRole.User;
    private User? currentUser;

    protected override async Task OnInitializedAsync()
    {
        await CheckUserAuthentication();
        await LoadPetsAsync();

        // Check for success message from query parameters
        var uri = new Uri(Navigation.Uri);
        var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
        if (query["adopted"] == "true")
        {
            successMessage = "?? Your adoption request has been submitted successfully! The shelter will contact you soon.";
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("eval", @"
                if (typeof $ !== 'undefined' && $.fn.magnificPopup) {
                    $('.image-popup').magnificPopup({
                        type: 'image',
                        closeOnContentClick: true,
                        closeBtnInside: false,
                        fixedContentPos: true,
                        mainClass: 'mfp-no-margins mfp-with-zoom',
                        gallery: {
                            enabled: true,
                            navigateByImgClick: true,
                            preload: [0,1]
                        },
                        image: {
                            verticalFit: true
                        },
                        zoom: {
                            enabled: true,
                            duration: 300
                        }
                    });
                }
            ");
        }
    }

    private async Task CheckUserAuthentication()
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            isUserAuthenticated = user.Identity?.IsAuthenticated == true;

            if (isUserAuthenticated)
            {
                var email = user.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value;
                if (!string.IsNullOrEmpty(email))
                {
                    currentUser = await UserService.GetUserByEmailAsync(email);
                    if (currentUser != null)
                    {
                        currentUserRole = currentUser.Role;
                    }
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error checking user authentication");
        }
    }

    private async Task LoadPetsAsync()
    {
        try
        {
            isLoading = true;
            errorMessage = null;

            var pets = await PetService.GetAllPetsAsync();
            var petsList = pets.ToList();

            // Filter only pets with AdoptionStatus = NotAdopted
            allPets = petsList.Where(p => p.AdoptionStatus == AdoptionStatus.NotAdopted)
                              .OrderByDescending(p => p.Timestamp)
                              .ToList();

            totalPages = (int)Math.Ceiling((double)allPets.Count / pageSize);
            if (totalPages < 1) totalPages = 1;

            UpdateCurrentPagePets();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading pets");
            errorMessage = $"We couldn't load our furry friends right now. Please try again in a moment.";
            allPets = new List<Pet>();
            currentPagePets = new List<Pet>();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task RetryLoading()
    {
        await LoadPetsAsync();
    }

    private void UpdateCurrentPagePets()
    {
        currentPagePets = allPets
            .Skip((currentPage - 1) * pageSize)
            .Take(pageSize)
            .ToList();
    }

    private void GoToPage(int pageNumber)
    {
        if (pageNumber < 1 || pageNumber > totalPages)
            return;

        currentPage = pageNumber;
        UpdateCurrentPagePets();
        StateHasChanged();
    }

    private string GetPetImage(Pet pet)
    {
        if (!string.IsNullOrWhiteSpace(pet.Image1Url) &&
            Uri.TryCreate(pet.Image1Url, UriKind.Absolute, out var uri) &&
            (uri.Scheme == Uri.UriSchemeHttp || uri.Scheme == Uri.UriSchemeHttps))
        {
            return pet.Image1Url;
        }

        return "/images/placeholder-pet.jpg";
    }

    private string GetPetAge(string birthDateString)
    {
        if (!DateTime.TryParse(birthDateString, out var birthDate))
            return "Unknown";

        var age = DateTime.Now - birthDate;
        var years = (int)(age.TotalDays / 365.25);
        var months = (int)((age.TotalDays % 365.25) / 30.44);

        if (years > 0)
        {
            return months > 0 ? $"{years} year{(years > 1 ? "s" : "")} {months} month{(months > 1 ? "s" : "")}"
                              : $"{years} year{(years > 1 ? "s" : "")}";
        }
        else if (months > 0)
        {
            return $"{months} month{(months > 1 ? "s" : "")}";
        }
        else
        {
            var days = (int)age.TotalDays;
            return $"{days} day{(days > 1 ? "s" : "")}";
        }
    }

    private void ViewPet(Pet pet)
    {
        selectedPet = pet;
        showDetailModal = true;
    }

    private void CloseModal()
    {
        selectedPet = null;
        showDetailModal = false;
    }

    private void NavigateToShelter(string shelterName, string shelterLocation)
    {
        var encodedName = Uri.EscapeDataString(shelterName);
        var encodedLocation = Uri.EscapeDataString(shelterLocation);
        Navigation.NavigateTo($"/shelters?name={encodedName}&location={encodedLocation}");
    }

    private async Task ShowAdoptionRequestModal(Pet pet)
    {
        petForAdoption = pet;
        showAdoptionModal = true;
        showDetailModal = false;
        adoptionNotes = string.Empty;
        adoptionCheckMessage = null;

        // Check if user already has a pending application for this pet
        isCheckingApplication = true;
        StateHasChanged();

        try
        {
            if (currentUser != null)
            {
                var hasPending = await AdoptionProcessService.HasPendingApplicationAsync(
                    currentUser.RowKey,
                    pet.PartitionKey,
                    pet.RowKey);

                if (hasPending)
                {
                    adoptionCheckMessage = $"You already have a pending adoption request for {pet.PartitionKey}. Please check your adoptions page for updates! ??";
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error checking pending applications");
            adoptionCheckMessage = "We couldn't verify your adoption status right now. Please try again in a moment.";
        }
        finally
        {
            isCheckingApplication = false;
            StateHasChanged();
        }
    }

    private void CloseAdoptionModal()
    {
        petForAdoption = null;
        showAdoptionModal = false;
        adoptionNotes = string.Empty;
        adoptionCheckMessage = null;
    }

    private void ContinueToAdoptionRequest()
    {
        if (petForAdoption == null || currentUser == null)
            return;

        // Navigate to adoption request page with pet and notes information
        var encodedPetName = Uri.EscapeDataString(petForAdoption.PartitionKey);
        var encodedPetBirthDate = Uri.EscapeDataString(petForAdoption.RowKey);
        var encodedNotes = string.IsNullOrEmpty(adoptionNotes) ? "" : Uri.EscapeDataString(adoptionNotes);

        Navigation.NavigateTo($"/adoptionrequest?pet={encodedPetName}&birthdate={encodedPetBirthDate}&notes={encodedNotes}");
    }

    private string GetSizeBadgeColor(Size size)
    {
        return size switch
        {
            Size.Small => "info",
            Size.Medium => "primary",
            Size.Large => "warning",
            _ => "secondary"
        };
    }

    private string GetVaccinationsDisplay(Vaccinations vaccinations)
    {
        if (vaccinations == Vaccinations.none)
            return "None";

        var vaccinationList = new List<string>();

        foreach (Vaccinations vac in Enum.GetValues(typeof(Vaccinations)))
        {
            if (vac != Vaccinations.none && vaccinations.HasFlag(vac))
            {
                vaccinationList.Add(vac.ToString());
            }
        }

        return vaccinationList.Any() ? string.Join(", ", vaccinationList) : "None";
    }
