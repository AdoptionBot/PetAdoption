@page "/pets"
@using PetAdoption.Services.Interfaces
@using PetAdoption.Data.TableStorage
@using PetAdoption.Data.TableStorage.Enums
@using Microsoft.AspNetCore.Components
@using PetAdoption.Web.Components.Shared
@inject IPetService PetService
@inject IAdoptionProcessService AdoptionProcessService
@inject IUserService UserService
@inject IShelterService ShelterService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject ILogger<Pets> Logger
@rendermode InteractiveServer

<PageTitle>Pets - Madeira Pet Adoption</PageTitle>

<div class="pets-page-wrapper">
    <section class="hero-wrap hero-wrap-2" style="background-image: url('images/bg_2.jpg');" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text align-items-end">
                <div class="col-md-9 ftco-animate pb-5">
                    <p class="breadcrumbs mb-2"><span class="mr-2"><a href="/">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Pets <i class="ion-ios-arrow-forward"></i></span></p>
                    <h1 class="mb-0 bread">Available Pets</h1>
                </div>
            </div>
        </div>
    </section>

    <section class="ftco-section">
        <div class="container">
            @if (isLoading)
            {
                <div class="row">
                    <div class="col-md-12 text-center">
                        <div class="spinner-border" role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                        <p class="mt-3">Loading pets...</p>
                    </div>
                </div>
            }
            else if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="row">
                    <div class="col-md-12">
                        <div class="alert alert-danger">
                            <h4>Error Loading Pets</h4>
                            <p>@errorMessage</p>
                            <button class="btn btn-primary" @onclick="RetryLoading">
                                <i class="fas fa-refresh"></i> Retry
                            </button>
                        </div>
                    </div>
                </div>
            }
            else if (!currentPagePets.Any())
            {
                <div class="row">
                    <div class="col-md-12 text-center">
                        <h3>No pets available for adoption at the moment</h3>
                        <p>Please check back later for new arrivals!</p>
                    </div>
                </div>
            }
            else
            {
                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="alert alert-success alert-dismissible fade show">
                        <i class="fas fa-check-circle"></i> @successMessage
                        <button type="button" class="btn-close" @onclick="() => successMessage = null" aria-label="Close"></button>
                    </div>
                }

                <!-- Pagination Navigation - Top -->
                @if (totalPages > 1)
                {
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <nav aria-label="Pet pagination">
                                <ul class="pagination justify-content-center">
                                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                        <a class="page-link" href="#" @onclick="() => GoToPage(currentPage - 1)" @onclick:preventDefault="true">Back</a>
                                    </li>
                                    @for (int i = 1; i <= totalPages; i++)
                                    {
                                        int pageNumber = i;
                                        <li class="page-item @(currentPage == pageNumber ? "active" : "")">
                                            <a class="page-link" href="#" @onclick="() => GoToPage(pageNumber)" @onclick:preventDefault="true">@pageNumber</a>
                                        </li>
                                    }
                                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                        <a class="page-link" href="#" @onclick="() => GoToPage(currentPage + 1)" @onclick:preventDefault="true">Next</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                }

                <!-- Pets Grid -->
                <div class="row">
                    @foreach (var pet in currentPagePets)
                    {
                        var imageUrl = GetPetImage(pet);

                        <div class="col-md-4 mb-4">
                            <div class="card card-clickable" @onclick="() => ViewPet(pet)">
                                <img src="@imageUrl"
                                     class="card-img-top pet-card-image"
                                     alt="@pet.PartitionKey"
                                     onerror="this.src='/images/placeholder-pet.jpg';" />
                                <div class="card-body">
                                    <h5 class="card-title">@pet.PartitionKey</h5>
                                    <p class="card-text">
                                        <strong>Species:</strong> @pet.Species<br />
                                        <strong>Age:</strong> @GetPetAge(pet.RowKey)<br />
                                        <strong>Gender:</strong> @pet.Gender
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination Navigation - Bottom -->
                @if (totalPages > 1)
                {
                    <div class="row mt-4">
                        <div class="col-md-12">
                            <nav aria-label="Pet pagination">
                                <ul class="pagination justify-content-center">
                                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                        <a class="page-link" href="#" @onclick="() => GoToPage(currentPage - 1)" @onclick:preventDefault="true">Back</a>
                                    </li>
                                    @for (int i = 1; i <= totalPages; i++)
                                    {
                                        int pageNumber = i;
                                        <li class="page-item @(currentPage == pageNumber ? "active" : "")">
                                            <a class="page-link" href="#" @onclick="() => GoToPage(pageNumber)" @onclick:preventDefault="true">@pageNumber</a>
                                        </li>
                                    }
                                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                        <a class="page-link" href="#" @onclick="() => GoToPage(currentPage + 1)" @onclick:preventDefault="true">Next</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                }

                <!-- Results Info -->
                <div class="row mt-3">
                    <div class="col-md-12 text-center">
                        <p class="text-muted">
                            Showing @((currentPage - 1) * pageSize + 1) to @Math.Min(currentPage * pageSize, allPets.Count) of @allPets.Count pets available for adoption
                        </p>
                    </div>
                </div>
            }
        </div>
    </section>

    <!-- Pet Detail Modal -->
    @if (selectedPet != null && showDetailModal)
    {
        <ModalHelper OnClose="CloseModal" ModalId="pet-detail-modal" />
        <div id="pet-detail-modal" class="modal fade show d-block modal-backdrop-custom" tabindex="-1">
            <div class="modal-dialog modal-xl modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">
                            <i class="fas fa-paw"></i> @selectedPet.PartitionKey
                        </h5>
                        <button type="button" class="btn-close" @onclick="CloseModal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <!-- Images Column -->
                            <div class="col-md-6">
                                <h6 class="border-bottom pb-2">Images & Video</h6>
                                <div class="row g-2 mb-3">
                                    @if (!string.IsNullOrEmpty(selectedPet.Image1Url))
                                    {
                                        <div class="col-6">
                                            <img src="@selectedPet.Image1Url" class="img-fluid rounded" alt="Image 1" />
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(selectedPet.Image2Url))
                                    {
                                        <div class="col-6">
                                            <img src="@selectedPet.Image2Url" class="img-fluid rounded" alt="Image 2" />
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(selectedPet.Image3Url))
                                    {
                                        <div class="col-6">
                                            <img src="@selectedPet.Image3Url" class="img-fluid rounded" alt="Image 3" />
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(selectedPet.Image4Url))
                                    {
                                        <div class="col-6">
                                            <img src="@selectedPet.Image4Url" class="img-fluid rounded" alt="Image 4" />
                                        </div>
                                    }
                                </div>
                                @if (!string.IsNullOrEmpty(selectedPet.Video1Url))
                                {
                                    <div class="mb-3">
                                        <video src="@selectedPet.Video1Url" class="w-100 rounded" controls></video>
                                    </div>
                                }
                            </div>

                            <!-- Details Column -->
                            <div class="col-md-6">
                                <h6 class="border-bottom pb-2">Basic Information</h6>
                                <table class="table table-sm">
                                    <tr>
                                        <th style="width: 40%;">Name:</th>
                                        <td>@selectedPet.PartitionKey</td>
                                    </tr>
                                    <tr>
                                        <th>Birth Date:</th>
                                        <td>@DateTime.Parse(selectedPet.RowKey).ToLongDateString()</td>
                                    </tr>
                                    <tr>
                                        <th>Age:</th>
                                        <td>@GetPetAge(selectedPet.RowKey)</td>
                                    </tr>
                                    <tr>
                                        <th>Species:</th>
                                        <td>@selectedPet.Species</td>
                                    </tr>
                                    <tr>
                                        <th>Breed:</th>
                                        <td>@(selectedPet.Breed ?? "Not specified")</td>
                                    </tr>
                                    <tr>
                                        <th>Colour:</th>
                                        <td>@(selectedPet.Colour ?? "Not specified")</td>
                                    </tr>
                                    <tr>
                                        <th>Gender:</th>
                                        <td>@selectedPet.Gender</td>
                                    </tr>
                                    <tr>
                                        <th>Size:</th>
                                        <td><span class="badge bg-@GetSizeBadgeColor(selectedPet.Size)">@selectedPet.Size</span></td>
                                    </tr>
                                    <tr>
                                        <th>Shelter:</th>
                                        <td>@selectedPet.ShelterName, @selectedPet.ShelterLocation</td>
                                    </tr>
                                </table>

                                <h6 class="border-bottom pb-2 mt-4">About @selectedPet.PartitionKey</h6>
                                <p>@selectedPet.About</p>

                                <h6 class="border-bottom pb-2 mt-4">Medical Information</h6>
                                <table class="table table-sm">
                                    <tr>
                                        <th style="width: 40%;">Vaccinations:</th>
                                        <td>@GetVaccinationsDisplay(selectedPet.Vaccinations)</td>
                                    </tr>
                                    <tr>
                                        <th>Neutered/Spayed:</th>
                                        <td>@(selectedPet.Neutered ? "Yes" : "No")</td>
                                    </tr>
                                    <tr>
                                        <th>Dewormed:</th>
                                        <td>@(selectedPet.Dewormed ? "Yes" : "No")</td>
                                    </tr>
                                    <tr>
                                        <th>Microchipped:</th>
                                        <td>@(selectedPet.Chipped ? "Yes" : "No")</td>
                                    </tr>
                                    @if (!string.IsNullOrEmpty(selectedPet.MedicalTreatments))
                                    {
                                        <tr>
                                            <th>Medical Treatments:</th>
                                            <td>@selectedPet.MedicalTreatments</td>
                                        </tr>
                                    }
                                    @if (!string.IsNullOrEmpty(selectedPet.KnownMedicalIssues))
                                    {
                                        <tr>
                                            <th>Known Medical Issues:</th>
                                            <td class="text-danger">@selectedPet.KnownMedicalIssues</td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseModal">Close</button>
                        @if (isUserAuthenticated && currentUserRole == UserRole.User)
                        {
                            <button type="button" class="btn btn-success" @onclick="() => ShowAdoptionRequestModal(selectedPet)">
                                <i class="fas fa-heart"></i> Request Adoption
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Adoption Request Confirmation Modal -->
    @if (petForAdoption != null && showAdoptionModal)
    {
        <ModalHelper OnClose="CloseAdoptionModal" ModalId="adoption-request-modal" />
        <div id="adoption-request-modal" class="modal fade show d-block modal-backdrop-dark" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header bg-success text-white">
                        <h5 class="modal-title">
                            <i class="fas fa-heart"></i> Adoption Request
                        </h5>
                        <button type="button" class="btn-close btn-close-white" @onclick="CloseAdoptionModal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        @if (isSubmittingAdoption)
                        {
                            <div class="text-center py-4">
                                <div class="spinner-border text-success" role="status">
                                    <span class="sr-only">Submitting...</span>
                                </div>
                                <p class="mt-3">Submitting your adoption request...</p>
                            </div>
                        }
                        else if (!string.IsNullOrEmpty(adoptionResultMessage))
                        {
                            <div class="alert @(adoptionRequestSuccess ? "alert-success" : "alert-danger")">
                                <i class="fas @(adoptionRequestSuccess ? "fa-check-circle" : "fa-exclamation-circle")"></i>
                                @adoptionResultMessage
                            </div>
                            @if (adoptionRequestSuccess)
                            {
                                <div class="text-center">
                                    <i class="fas fa-paw fa-5x text-success mb-3"></i>
                                    <h4>@petForAdoption.PartitionKey can't wait to meet you!</h4>
                                    <p class="text-muted">The shelter will review your application and contact you soon.</p>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center mb-3">
                                <i class="fas fa-heart fa-4x text-danger mb-3"></i>
                                <h5>Are you ready to adopt @petForAdoption.PartitionKey?</h5>
                            </div>
                            
                            <div class="alert alert-info">
                                <h6><i class="fas fa-info-circle"></i> Adoption Request Details</h6>
                                <hr />
                                <p class="mb-1"><strong>Pet:</strong> @petForAdoption.PartitionKey</p>
                                <p class="mb-1"><strong>Species:</strong> @petForAdoption.Species</p>
                                <p class="mb-1"><strong>Age:</strong> @GetPetAge(petForAdoption.RowKey)</p>
                                <hr />
                                <p class="mb-1"><strong>Shelter:</strong> @petForAdoption.ShelterName</p>
                                <p class="mb-0"><strong>Location:</strong> @petForAdoption.ShelterLocation</p>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Additional Notes (Optional)</label>
                                <textarea class="form-control" rows="3" @bind="adoptionNotes" 
                                          placeholder="Tell the shelter why you'd be a great parent for @petForAdoption.PartitionKey..."></textarea>
                            </div>

                            <p class="small text-muted">
                                By clicking "Submit Request", an adoption application will be sent to 
                                <strong>@petForAdoption.ShelterName</strong> in <strong>@petForAdoption.ShelterLocation</strong>. 
                                The shelter will review your application and contact you.
                            </p>
                        }
                    </div>
                    <div class="modal-footer">
                        @if (!string.IsNullOrEmpty(adoptionResultMessage))
                        {
                            <button type="button" class="btn btn-primary w-100" @onclick="CloseAdoptionModalAndRefresh">
                                <i class="fas fa-check"></i> Close
                            </button>
                        }
                        else if (!isSubmittingAdoption)
                        {
                            <button type="button" class="btn btn-secondary" @onclick="CloseAdoptionModal">
                                <i class="fas fa-times"></i> Cancel
                            </button>
                            <button type="button" class="btn btn-success" @onclick="SubmitAdoptionRequest">
                                <i class="fas fa-heart"></i> Submit Request
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<Pet> allPets = new();
    private List<Pet> currentPagePets = new();
    private bool isLoading = true;
    private string? errorMessage;
    private string? successMessage;
    
    private int currentPage = 1;
    private const int pageSize = 12;
    private int totalPages = 1;

    private Pet? selectedPet;
    private bool showDetailModal = false;

    private Pet? petForAdoption;
    private bool showAdoptionModal = false;
    private bool isSubmittingAdoption = false;
    private string adoptionNotes = string.Empty;
    private string? adoptionResultMessage;
    private bool adoptionRequestSuccess = false;

    private bool isUserAuthenticated = false;
    private UserRole currentUserRole = UserRole.User;
    private User? currentUser;

    protected override async Task OnInitializedAsync()
    {
        await CheckUserAuthentication();
        await LoadPetsAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("eval", @"
                if (typeof $ !== 'undefined' && $.fn.magnificPopup) {
                    $('.image-popup').magnificPopup({
                        type: 'image',
                        closeOnContentClick: true,
                        closeBtnInside: false,
                        fixedContentPos: true,
                        mainClass: 'mfp-no-margins mfp-with-zoom',
                        gallery: {
                            enabled: true,
                            navigateByImgClick: true,
                            preload: [0,1]
                        },
                        image: {
                            verticalFit: true
                        },
                        zoom: {
                            enabled: true,
                            duration: 300
                        }
                    });
                }
            ");
        }
    }

    private async Task CheckUserAuthentication()
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            isUserAuthenticated = user.Identity?.IsAuthenticated == true;

            if (isUserAuthenticated)
            {
                var email = user.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value;
                if (!string.IsNullOrEmpty(email))
                {
                    currentUser = await UserService.GetUserByEmailAsync(email);
                    if (currentUser != null)
                    {
                        currentUserRole = currentUser.Role;
                    }
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error checking user authentication");
        }
    }

    private async Task LoadPetsAsync()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            
            var pets = await PetService.GetAllPetsAsync();
            var petsList = pets.ToList();
            
            // Filter only pets with AdoptionStatus = NotAdopted
            allPets = petsList.Where(p => p.AdoptionStatus == AdoptionStatus.NotAdopted)
                              .OrderByDescending(p => p.Timestamp)
                              .ToList();
            
            totalPages = (int)Math.Ceiling((double)allPets.Count / pageSize);
            if (totalPages < 1) totalPages = 1;
            
            UpdateCurrentPagePets();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading pets");
            errorMessage = $"Failed to load pets: {ex.Message}";
            allPets = new List<Pet>();
            currentPagePets = new List<Pet>();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task RetryLoading()
    {
        await LoadPetsAsync();
    }

    private void UpdateCurrentPagePets()
    {
        currentPagePets = allPets
            .Skip((currentPage - 1) * pageSize)
            .Take(pageSize)
            .ToList();
    }

    private void GoToPage(int pageNumber)
    {
        if (pageNumber < 1 || pageNumber > totalPages)
            return;

        currentPage = pageNumber;
        UpdateCurrentPagePets();
        StateHasChanged();
    }

    private string GetPetImage(Pet pet)
    {
        if (!string.IsNullOrWhiteSpace(pet.Image1Url) && 
            Uri.TryCreate(pet.Image1Url, UriKind.Absolute, out var uri) &&
            (uri.Scheme == Uri.UriSchemeHttp || uri.Scheme == Uri.UriSchemeHttps))
        {
            return pet.Image1Url;
        }

        return "/images/placeholder-pet.jpg";
    }

    private string GetPetAge(string birthDateString)
    {
        if (!DateTime.TryParse(birthDateString, out var birthDate))
            return "Unknown";

        var age = DateTime.Now - birthDate;
        var years = (int)(age.TotalDays / 365.25);
        var months = (int)((age.TotalDays % 365.25) / 30.44);

        if (years > 0)
        {
            return months > 0 ? $"{years} year{(years > 1 ? "s" : "")} {months} month{(months > 1 ? "s" : "")}" 
                              : $"{years} year{(years > 1 ? "s" : "")}";
        }
        else if (months > 0)
        {
            return $"{months} month{(months > 1 ? "s" : "")}";
        }
        else
        {
            var days = (int)age.TotalDays;
            return $"{days} day{(days > 1 ? "s" : "")}";
        }
    }

    private void ViewPet(Pet pet)
    {
        selectedPet = pet;
        showDetailModal = true;
    }

    private void CloseModal()
    {
        selectedPet = null;
        showDetailModal = false;
    }

    private void ShowAdoptionRequestModal(Pet pet)
    {
        petForAdoption = pet;
        showAdoptionModal = true;
        showDetailModal = false;
        adoptionNotes = string.Empty;
        adoptionResultMessage = null;
        adoptionRequestSuccess = false;
    }

    private void CloseAdoptionModal()
    {
        petForAdoption = null;
        showAdoptionModal = false;
        adoptionNotes = string.Empty;
        adoptionResultMessage = null;
        adoptionRequestSuccess = false;
    }

    private async Task CloseAdoptionModalAndRefresh()
    {
        CloseAdoptionModal();
        if (adoptionRequestSuccess)
        {
            await LoadPetsAsync(); // Refresh to reflect the updated status
        }
    }

    private async Task SubmitAdoptionRequest()
    {
        if (petForAdoption == null || currentUser == null)
            return;

        isSubmittingAdoption = true;
        StateHasChanged();

        try
        {
            var result = await AdoptionProcessService.SubmitAdoptionApplicationAsync(
                currentUser.PartitionKey,
                currentUser.RowKey,
                petForAdoption.PartitionKey,
                petForAdoption.RowKey,
                adoptionNotes);

            adoptionRequestSuccess = result.Success;
            adoptionResultMessage = result.Message;

            if (result.Success)
            {
                Logger.LogInformation(
                    "Adoption request submitted successfully for pet {PetName} by user {UserName}",
                    petForAdoption.PartitionKey,
                    currentUser.PartitionKey);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error submitting adoption request");
            adoptionResultMessage = "An unexpected error occurred. Please try again.";
            adoptionRequestSuccess = false;
        }
        finally
        {
            isSubmittingAdoption = false;
            StateHasChanged();
        }
    }

    private string GetSizeBadgeColor(Size size)
    {
        return size switch
        {
            Size.Small => "info",
            Size.Medium => "primary",
            Size.Large => "warning",
            _ => "secondary"
        };
    }

    private string GetVaccinationsDisplay(Vaccinations vaccinations)
    {
        if (vaccinations == Vaccinations.none)
            return "None";

        var vaccinationList = new List<string>();
        
        foreach (Vaccinations vac in Enum.GetValues(typeof(Vaccinations)))
        {
            if (vac != Vaccinations.none && vaccinations.HasFlag(vac))
            {
                vaccinationList.Add(vac.ToString());
            }
        }

        return vaccinationList.Any() ? string.Join(", ", vaccinationList) : "None";
    }
}