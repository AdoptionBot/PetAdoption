@page "/pets"
@using Microsoft.AspNetCore.Components
@using PetAdoption.Data.TableStorage
@using PetAdoption.Data.TableStorage.Enums
@using PetAdoption.Services.Interfaces
@using PetAdoption.Services.Web
@using PetAdoption.Web.Components.Shared
@inject IPetService PetService
@inject IAdoptionProcessService AdoptionProcessService
@inject IUserService UserService
@inject IShelterService ShelterService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject ILogger<Pets> Logger
@inject LocalizationService LocalizationService
@inject DynamicLocalizer<Pets> Localizer
@implements IDisposable
@rendermode InteractiveServer

<PageTitle>@Localizer["PageTitle"]</PageTitle>

<div class="pets-page-wrapper">
    <section class="hero-wrap hero-wrap-2" style="background-image: url('images/bg_2.jpg');" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text align-items-end">
                <div class="col-md-9 ftco-animate pb-5">
                    <p class="breadcrumbs mb-2">
                        <span class="mr-2"><a href="/">@Localizer["Home"] <i class="ion-ios-arrow-forward"></i></a></span>
                        <span>@Localizer["Pets"] <i class="ion-ios-arrow-forward"></i></span>
                    </p>
                    <h1 class="mb-0 bread">
                        <i class="fas fa-paw paw-print me-2"></i>@Localizer["AvailablePets"]
                    </h1>
                    <p class="hero-subtitle mt-3 text-white">
                        <i class="fas fa-heart heartbeat text-danger me-2"></i>
                        @Localizer["HeroSubtitle"]
                    </p>
                </div>
            </div>
        </div>
    </section>

    <section class="ftco-section">
        <div class="container">
            @if (isLoading)
            {
                <div class="row">
                    <div class="col-md-12 text-center py-5 fade-in">
                        <div class="spinner-border text-primary mb-3" style="width: 3rem; height: 3rem;" role="status">
                            <span class="sr-only">@Localizer["LoadingMessage"]</span>
                        </div>
                        <h4 class="text-primary">@Localizer["LoadingMessage"]</h4>
                        <p class="text-muted">
                            <i class="fas fa-paw me-2"></i>
                            @Localizer["PleaseWait"]
                        </p>
                    </div>
                </div>
            }
            else if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="row">
                    <div class="col-md-12">
                        <div class="alert alert-danger fade-in">
                            <h4><i class="fas fa-exclamation-triangle me-2"></i>@Localizer["ErrorTitle"]</h4>
                            <p>@errorMessage</p>
                            <button class="btn btn-primary" @onclick="RetryLoading">
                                <i class="fas fa-refresh me-2"></i>@Localizer["TryAgain"]
                            </button>
                        </div>
                    </div>
                </div>
            }
            else if (!currentPagePets.Any())
            {
                <div class="row">
                    <div class="col-md-12 text-center py-5 fade-in">
                        <i class="fas fa-heart-broken" style="font-size: 5rem; color: #ddd;"></i>
                        <h3 class="mt-4 mb-3">@Localizer["NoPetsTitle"]</h3>
                        <p class="text-muted mb-4">
                            @Localizer["NoPetsMessage"]
                            <i class="fas fa-smile ms-2"></i>
                        </p>
                        <div class="alert alert-info d-inline-block">
                            <i class="fas fa-bell me-2"></i>
                            @Localizer["CheckBackSoon"]
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- Heartwarming Introduction Banner -->
                <div class="intro-banner fade-in">
                    <div class="row">
                        <div class="col-md-12 text-center mb-3">
                            <h2>
                                <i class="fas fa-heart heartbeat me-2"></i>
                                @Localizer["MeetYourBestFriend"]
                            </h2>
                            <p class="lead mb-4">
                                @Localizer["IntroMessage"]
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 stat-item">
                            <i class="fas fa-home fa-2x mb-2"></i>
                            <span class="stat-number">@allPets.Count</span>
                            <span>@Localizer["PetsReadyForAdoption"]</span>
                        </div>
                        <div class="col-md-4 stat-item">
                            <i class="fas fa-heart fa-2x mb-2"></i>
                            <span class="stat-number">100%</span>
                            <span>@Localizer["LoveGuaranteed"]</span>
                        </div>
                        <div class="col-md-4 stat-item">
                            <i class="fas fa-shield-alt fa-2x mb-2"></i>
                            <span class="stat-number">@Localizer["Safe"]</span>
                            <span>@Localizer["HealthChecked"]</span>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="alert alert-success alert-dismissible fade show fade-in">
                        <i class="fas fa-check-circle me-2"></i>
                        <strong>@Localizer["SuccessPrefix"]</strong> @successMessage
                        <button type="button" class="btn-close" @onclick="() => successMessage = null" aria-label="Close"></button>
                    </div>
                }

                <!-- Pagination Navigation - Top -->
                @if (totalPages > 1)
                {
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <nav aria-label="Pet pagination">
                                <ul class="pagination justify-content-center">
                                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                        <a class="page-link" href="#" @onclick="() => GoToPage(currentPage - 1)" @onclick:preventDefault="true">
                                            <i class="fas fa-chevron-left me-1"></i>@Localizer["Previous"]
                                        </a>
                                    </li>
                                    @for (int i = 1; i <= totalPages; i++)
                                    {
                                        int pageNumber = i;
                                        <li class="page-item @(currentPage == pageNumber ? "active" : "")">
                                            <a class="page-link" href="#" @onclick="() => GoToPage(pageNumber)" @onclick:preventDefault="true">@pageNumber</a>
                                        </li>
                                    }
                                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                        <a class="page-link" href="#" @onclick="() => GoToPage(currentPage + 1)" @onclick:preventDefault="true">
                                            @Localizer["Next"]<i class="fas fa-chevron-right ms-1"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                }

                <!-- Pets Grid -->
                <div class="row">
                    @foreach (var pet in currentPagePets)
                    {
                        var imageUrl = GetPetImage(pet);

                        <div class="col-md-4 mb-4 fade-in">
                            <div class="card card-clickable" @onclick="() => ViewPet(pet)">
                                <div class="position-relative" style="overflow: hidden;">
                                    <img src="@imageUrl"
                                         class="card-img-top pet-card-image"
                                         alt="@pet.PartitionKey"
                                         onerror="this.src='/images/placeholder-pet.jpg';" />
                                    <div class="love-badge">
                                        <i class="fas fa-heart heartbeat me-1"></i>@Localizer["AdoptMe"]
                                    </div>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-paw text-primary me-2"></i>@pet.PartitionKey
                                    </h5>
                                    <p class="card-text">
                                        <span class="badge bg-info mb-2">
                                            <i class="fas fa-@(pet.Species == Species.Dog ? "dog" : "cat") me-1"></i>@pet.Species
                                        </span>
                                        <br />
                                        <small class="text-muted">
                                            <i class="fas fa-birthday-cake me-1"></i><strong>@Localizer["Age"]:</strong> @GetPetAge(pet.RowKey)
                                        </small>
                                        <br />
                                        <small class="text-muted">
                                            <i class="fas fa-@(pet.Gender == Gender.Male ? "mars" : "venus") me-1"></i><strong>@Localizer["Gender"]:</strong> @pet.Gender
                                        </small>
                                        <br />
                                    <p class="mb-1">
                                        <small class="text-muted">
                                            <i class="fas fa-home me-1"></i><strong>@Localizer["Shelter"]:</strong> @pet.ShelterName
                                        </small>
                                    </p>
                                    </p>
                                    <div class="text-center mt-3">
                                        <small class="text-primary">
                                            <i class="fas fa-hand-pointer me-2"></i>@Localizer["ClickToLearnMore"]
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination Navigation - Bottom -->
                @if (totalPages > 1)
                {
                    <div class="row mt-4">
                        <div class="col-md-12">
                            <nav aria-label="Pet pagination">
                                <ul class="pagination justify-content-center">
                                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                        <a class="page-link" href="#" @onclick="() => GoToPage(currentPage - 1)" @onclick:preventDefault="true">
                                            <i class="fas fa-chevron-left me-1"></i>@Localizer["Previous"]
                                        </a>
                                    </li>
                                    @for (int i = 1; i <= totalPages; i++)
                                    {
                                        int pageNumber = i;
                                        <li class="page-item @(currentPage == pageNumber ? "active" : "")">
                                            <a class="page-link" href="#" @onclick="() => GoToPage(pageNumber)" @onclick:preventDefault="true">@pageNumber</a>
                                        </li>
                                    }
                                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                        <a class="page-link" href="#" @onclick="() => GoToPage(currentPage + 1)" @onclick:preventDefault="true">
                                            @Localizer["Next"]<i class="fas fa-chevron-right ms-1"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                }

                <!-- Results Info -->
                <div class="row mt-3">
                    <div class="col-md-12 text-center">
                        <p class="text-muted">
                            <i class="fas fa-paw text-primary me-2"></i>
                            @Localizer["Showing"] <strong>@((currentPage - 1) * pageSize + 1)</strong> @Localizer["To"] <strong>@Math.Min(currentPage * pageSize, allPets.Count)</strong> @Localizer["Of"] <strong>@allPets.Count</strong> @Localizer["BeautifulPets"]
                        </p>
                        <div class="alert alert-light d-inline-block mt-3">
                            <i class="fas fa-lightbulb text-warning me-2"></i>
                            <strong>@Localizer["Tip"]:</strong> @Localizer["TipMessage"]
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <!-- Pet Detail Modal -->
    @if (selectedPet != null && showDetailModal)
    {
        <ModalHelper OnClose="CloseModal" ModalId="pet-detail-modal" />
        <div id="pet-detail-modal" class="modal fade show d-block modal-backdrop-custom" tabindex="-1">
            <div class="modal-dialog modal-xl modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title">
                            <i class="fas fa-paw heartbeat me-2"></i> @Localizer["Meet"] @selectedPet.PartitionKey
                            <span class="badge bg-light text-primary ms-2">@selectedPet.Species</span>
                        </h5>
                        <button type="button" class="btn-close btn-close-white" @onclick="CloseModal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <!-- Heartwarming Introduction -->
                        <div class="alert alert-info fade-in mb-4">
                            <h5><i class="fas fa-heart text-danger heartbeat me-2"></i>@Localizer["About"] @selectedPet.PartitionKey</h5>
                            <p class="mb-0">
                                <strong>@selectedPet.PartitionKey</strong> @Localizer["AboutMessage"] <strong>@GetPetAge(selectedPet.RowKey)</strong> 
                                @selectedPet.Species.ToString().ToLower() @Localizer["OldLookingForHome"]
                            </p>
                        </div>

                        <div class="row">
                            <!-- Images Column -->
                            <div class="col-md-6">
                                <h6 class="border-bottom pb-2">
                                    <i class="fas fa-images me-2"></i>@Localizer["Gallery"]
                                    <small class="text-muted ms-2">@Localizer["ClickToEnlarge"]</small>
                                </h6>
                                <div class="row g-2 mb-3">
                                    @if (!string.IsNullOrEmpty(selectedPet.Image1Url))
                                    {
                                        <div class="col-6">
                                            <img src="@selectedPet.Image1Url"
                                                 class="img-fluid rounded shadow-sm clickable-image"
                                                 alt="Image 1"
                                                 style="height: 200px; width: 100%; object-fit: cover; cursor: pointer;"
                                                 @onclick="() => OpenCarousel(0)"
                                                 @onclick:stopPropagation="true" />
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(selectedPet.Image2Url))
                                    {
                                        <div class="col-6">
                                            <img src="@selectedPet.Image2Url"
                                                 class="img-fluid rounded shadow-sm clickable-image"
                                                 alt="Image 2"
                                                 style="height: 200px; width: 100%; object-fit: cover; cursor: pointer;"
                                                 @onclick="() => OpenCarousel(1)"
                                                 @onclick:stopPropagation="true" />
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(selectedPet.Image3Url))
                                    {
                                        <div class="col-6">
                                            <img src="@selectedPet.Image3Url"
                                                 class="img-fluid rounded shadow-sm clickable-image"
                                                 alt="Image 3"
                                                 style="height: 200px; width: 100%; object-fit: cover; cursor: pointer;"
                                                 @onclick="() => OpenCarousel(2)"
                                                 @onclick:stopPropagation="true" />
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(selectedPet.Image4Url))
                                    {
                                        <div class="col-6">
                                            <img src="@selectedPet.Image4Url"
                                                 class="img-fluid rounded shadow-sm clickable-image"
                                                 alt="Image 4"
                                                 style="height: 200px; width: 100%; object-fit: cover; cursor: pointer;"
                                                 @onclick="() => OpenCarousel(3)"
                                                 @onclick:stopPropagation="true" />
                                        </div>
                                    }
                                </div>
                                @if (!string.IsNullOrEmpty(selectedPet.Video1Url))
                                {
                                    <div class="mb-3">
                                        <h6 class="border-bottom pb-2">
                                            <i class="fas fa-video me-2"></i>@Localizer["Video"]
                                        </h6>
                                        <video src="@selectedPet.Video1Url" class="w-100 rounded shadow-sm" controls></video>
                                    </div>
                                }
                            </div>

                            <!-- Details Column -->
                            <div class="col-md-6">
                                <h6 class="border-bottom pb-2">
                                    <i class="fas fa-info-circle me-2"></i>@Localizer["BasicInformation"]
                                </h6>
                                <table class="table table-sm table-hover">
                                    <tr>
                                        <th style="width: 40%;"><i class="fas fa-signature me-2 text-primary"></i>@Localizer["Name"]:</th>
                                        <td><strong>@selectedPet.PartitionKey</strong></td>
                                    </tr>
                                    <tr>
                                        <th><i class="fas fa-calendar me-2 text-info"></i>@Localizer["BirthDate"]:</th>
                                        <td>@DateTime.Parse(selectedPet.RowKey).ToLongDateString()</td>
                                    </tr>
                                    <tr>
                                        <th><i class="fas fa-birthday-cake me-2 text-warning"></i>@Localizer["Age"]:</th>
                                        <td><span class="badge bg-warning">@GetPetAge(selectedPet.RowKey)</span></td>
                                    </tr>
                                    <tr>
                                        <th><i class="fas fa-paw me-2 text-success"></i>@Localizer["Species"]:</th>
                                        <td>@selectedPet.Species</td>
                                    </tr>
                                    <tr>
                                        <th><i class="fas fa-dog me-2 text-primary"></i>@Localizer["Breed"]:</th>
                                        <td>@(selectedPet.Breed ?? Localizer["MixedNotSpecified"])</td>
                                    </tr>
                                    <tr>
                                        <th><i class="fas fa-palette me-2 text-info"></i>@Localizer["Colour"]:</th>
                                        <td>@(selectedPet.Colour ?? Localizer["NotSpecified"])</td>
                                    </tr>
                                    <tr>
                                        <th><i class="fas fa-@(selectedPet.Gender == Gender.Male ? "mars" : "venus") me-2 @(selectedPet.Gender == Gender.Male ? "text-primary" : "text-danger")"></i>@Localizer["Gender"]:</th>
                                        <td>@selectedPet.Gender</td>
                                    </tr>
                                    <tr>
                                        <th><i class="fas fa-ruler-vertical me-2 text-secondary"></i>@Localizer["Size"]:</th>
                                        <td><span class="badge bg-@GetSizeBadgeColor(selectedPet.Size)">@selectedPet.Size</span></td>
                                    </tr>
                                    <tr>
                                        <th><i class="fas fa-home me-2 text-success"></i>@Localizer["Shelter"]:</th>
                                        <td>
                                            <a class="shelter-link" @onclick="() => NavigateToShelter(selectedPet.ShelterName, selectedPet.ShelterLocation)" @onclick:preventDefault="true">
                                                @selectedPet.ShelterName, @selectedPet.ShelterLocation <i class="fas fa-external-link-alt ms-1"></i>
                                            </a>
                                        </td>
                                    </tr>
                                </table>

                                <h6 class="border-bottom pb-2 mt-4">
                                    <i class="fas fa-book-open me-2"></i>@selectedPet.PartitionKey @Localizer["Story"]
                                </h6>
                                <div class="alert alert-light">
                                    <p class="mb-0">@selectedPet.About</p>
                                </div>

                                <h6 class="border-bottom pb-2 mt-4">
                                    <i class="fas fa-heartbeat me-2"></i>@Localizer["MedicalInformation"]
                                </h6>
                                <table class="table table-sm">
                                    <tr>
                                        <th style="width: 40%;"><i class="fas fa-syringe me-2 text-info"></i>@Localizer["Vaccinations"]:</th>
                                        <td>
                                            <span class="badge bg-success">@GetVaccinationsDisplay(selectedPet.Vaccinations)</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th><i class="fas fa-check-circle me-2 text-success"></i>@Localizer["NeuteredSpayed"]:</th>
                                        <td>
                                            @if (selectedPet.Neutered)
                                            {
                                                <span class="badge bg-success"><i class="fas fa-check me-1"></i>@Localizer["Yes"]</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary"><i class="fas fa-times me-1"></i>@Localizer["No"]</span>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <th><i class="fas fa-pills me-2 text-warning"></i>@Localizer["Dewormed"]:</th>
                                        <td>
                                            @if (selectedPet.Dewormed)
                                            {
                                                <span class="badge bg-success"><i class="fas fa-check me-1"></i>@Localizer["Yes"]</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary"><i class="fas fa-times me-1"></i>@Localizer["No"]</span>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <th><i class="fas fa-microchip me-2 text-primary"></i>@Localizer["Microchipped"]:</th>
                                        <td>
                                            @if (selectedPet.Chipped)
                                            {
                                                <span class="badge bg-success"><i class="fas fa-check me-1"></i>@Localizer["Yes"]</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary"><i class="fas fa-times me-1"></i>@Localizer["No"]</span>
                                            }
                                        </td>
                                    </tr>
                                    @if (!string.IsNullOrEmpty(selectedPet.MedicalTreatments))
                                    {
                                        <tr>
                                            <th><i class="fas fa-notes-medical me-2 text-info"></i>@Localizer["MedicalTreatments"]:</th>
                                            <td>@selectedPet.MedicalTreatments</td>
                                        </tr>
                                    }
                                    @if (!string.IsNullOrEmpty(selectedPet.KnownMedicalIssues))
                                    {
                                        <tr>
                                            <th><i class="fas fa-exclamation-triangle me-2 text-warning"></i>@Localizer["KnownMedicalIssues"]:</th>
                                            <td class="text-danger">@selectedPet.KnownMedicalIssues</td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>

                        <!-- Call to Action -->
                        <div class="alert alert-success mt-4 fade-in">
                            <h5><i class="fas fa-heart heartbeat text-danger me-2"></i>@Localizer["ReadyToChangeLife"]</h5>
                            <p class="mb-0">
                                <strong>@selectedPet.PartitionKey</strong> @Localizer["AdoptionCTA"]
                            </p>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseModal">
                            <i class="fas fa-times me-2"></i>@Localizer["Close"]
                        </button>
                        @if (isUserAuthenticated && (currentUserRole == UserRole.User || currentUserRole == UserRole.Foster))
                        {
                            <button type="button" class="btn btn-success btn-lg" @onclick="() => ShowAdoptionRequestModal(selectedPet)">
                                <i class="fas fa-heart me-2 heartbeat"></i>@Localizer["Adopt"] @selectedPet.PartitionKey
                            </button>
                        }
                        else if (!isUserAuthenticated)
                        {
                            <button type="button" class="btn btn-info" @onclick='() => Navigation.NavigateTo("/Account/Login")'>
                                <i class="fas fa-sign-in-alt me-2"></i>@Localizer["LoginToAdopt"]
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Adoption Request Information Modal -->
    @if (petForAdoption != null && showAdoptionModal)
    {
        <ModalHelper OnClose="CloseAdoptionModal" ModalId="adoption-request-modal" />
        <div id="adoption-request-modal" class="modal fade show d-block modal-backdrop-dark" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content">
                    <div class="modal-header bg-success text-white">
                        <h5 class="modal-title">
                            <i class="fas fa-heart heartbeat me-2"></i> @Localizer["StartAdoptionJourney"]
                        </h5>
                        <button type="button" class="btn-close btn-close-white" @onclick="CloseAdoptionModal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        @if (isCheckingApplication)
                        {
                            <div class="text-center py-4">
                                <div class="spinner-border text-success" role="status">
                                    <span class="sr-only">@Localizer["VerifyingRequirements"]</span>
                                </div>
                                <p class="mt-3">@Localizer["VerifyingRequirements"]</p>
                            </div>
                        }
                        else if (!string.IsNullOrEmpty(adoptionCheckMessage))
                        {
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-circle me-2"></i>
                                @adoptionCheckMessage
                            </div>
                        }
                        else
                        {
                            <div class="text-center mb-4 fade-in">
                                <div class="mb-3">
                                    <i class="fas fa-heart fa-4x text-danger heartbeat"></i>
                                </div>
                                <h4>@Localizer["ReadyToGiveForeverHome"] @petForAdoption.PartitionKey?</h4>
                                <p class="text-muted">@Localizer["LifeChangingDecision"]</p>
                            </div>

                            <div class="alert alert-info">
                                <h6><i class="fas fa-paw me-2"></i>@Localizer["PetInformation"]</h6>
                                <hr />
                                <div class="row">
                                    <div class="col-md-6">
                                        <p class="mb-1"><i class="fas fa-signature me-2 text-primary"></i><strong>@Localizer["Pet"]:</strong> @petForAdoption.PartitionKey</p>
                                        <p class="mb-1"><i class="fas fa-dog me-2 text-success"></i><strong>@Localizer["Species"]:</strong> @petForAdoption.Species</p>
                                        <p class="mb-0"><i class="fas fa-birthday-cake me-2 text-warning"></i><strong>@Localizer["Age"]:</strong> @GetPetAge(petForAdoption.RowKey)</p>
                                    </div>
                                    <div class="col-md-6">
                                        <p class="mb-1">
                                            <i class="fas fa-home me-2 text-info"></i><strong>@Localizer["Shelter"]:</strong>
                                            <a class="shelter-link" @onclick="() => NavigateToShelter(petForAdoption.ShelterName, petForAdoption.ShelterLocation)" @onclick:preventDefault="true">
