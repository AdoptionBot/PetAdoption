@page "/profile"
@using Microsoft.AspNetCore.Authorization
@using PetAdoption.Data.TableStorage
@using PetAdoption.Data.TableStorage.Enums
@using PetAdoption.Services
@using PetAdoption.Services.Interfaces
@using PetAdoption.Services.Web
@using PetAdoption.Web.Components.Shared
@attribute [Authorize]
@inject IUserService UserService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject ProfileStateService ProfileState
@inject LocalizationService LocalizationService
@inject DynamicLocalizer<UserProfile> Localizer
@implements IDisposable
@rendermode InteractiveServer

<PageTitle>@Localizer["PageTitle"]</PageTitle>

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">@Localizer["MyProfile"]</h3>
                </div>
                <div class="card-body p-4">
                    @if (!isProfileComplete)
                    {
                        <div class="alert alert-warning">
                            <strong>@Localizer["CompleteYourProfile"]</strong>
                            <p class="mb-0">@Localizer["CompleteProfileMessage"]</p>
                        </div>
                    }

                    @if (isLoading)
                    {
                        <div class="text-center">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">@Localizer["Loading"]</span>
                            </div>
                        </div>
                    }
                    else if (currentUser != null)
                    {
                        <!-- Replace EditForm with ValidatedForm for consistency -->
                        <ValidatedForm Model="currentUser" OnValidSubmit="HandleValidSubmit" ScrollToTopOnValidation="true">
                            <DataAnnotationsValidator />
                            <ValidationSummary class="alert alert-danger" />

                            @if (!string.IsNullOrEmpty(successMessage))
                            {
                                <div class="alert alert-success">@successMessage</div>
                            }

                            @if (!string.IsNullOrEmpty(errorMessage))
                            {
                                <div class="alert alert-danger">@errorMessage</div>
                            }

                            <!-- User Form Section -->
                            <div class="mb-4">
                                <h5 class="border-bottom pb-2">@Localizer["UserInformation"]</h5>

                                <div class="mb-3">
                                    <label class="form-label">@Localizer["Email"]</label>
                                    <input type="email" class="form-control" value="@currentUser.RowKey" disabled />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">@Localizer["UserName"]</label>
                                    <input type="text" class="form-control" value="@currentUser.PartitionKey" disabled />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">@Localizer["PhoneNumber"] <span class="text-danger">*</span></label>
                                    <InputText @bind-Value="currentUser.PhoneNumber" class="form-control" />
                                    <ValidationMessage For="@(() => currentUser.PhoneNumber)" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">@Localizer["Address"] <span class="text-danger">*</span></label>
                                    <InputTextArea @bind-Value="currentUser.Address" class="form-control" rows="3" />
                                    <ValidationMessage For="@(() => currentUser.Address)" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">@Localizer["Country"] <span class="text-danger">*</span></label>
                                    <CountryDropdown @bind-Value="currentUser.Country" CssClass="form-select" />
                                    <ValidationMessage For="@(() => currentUser.Country)" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">@Localizer["Website"]</label>
                                    <InputText @bind-Value="currentUser.Website" class="form-control" placeholder="@Localizer["WebsitePlaceholder"]" />
                                    <ValidationMessage For="@(() => currentUser.Website)" />
                                </div>

                                <h6 class="border-bottom pb-2 mt-4">@Localizer["SocialMedia"]</h6>

                                <div class="mb-3">
                                    <label class="form-label">@Localizer["FacebookUrl"]</label>
                                    <InputText @bind-Value="currentUser.Facebook" class="form-control" />
                                    <ValidationMessage For="@(() => currentUser.Facebook)" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">@Localizer["InstagramUrl"]</label>
                                    <InputText @bind-Value="currentUser.Instagram" class="form-control" />
                                    <ValidationMessage For="@(() => currentUser.Instagram)" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">@Localizer["XUrl"]</label>
                                    <InputText @bind-Value="currentUser.X" class="form-control" />
                                    <ValidationMessage For="@(() => currentUser.X)" />
                                </div>

                                <div class="mb-3">
                                    <div class="form-check">
                                        <InputCheckbox @bind-Value="currentUser.IsFoster" class="form-check-input" id="isFosterCheckbox" />
                                        <label class="form-check-label" for="isFosterCheckbox">
                                            <strong>@Localizer["Foster"]</strong>
                                            <div class="text-muted small">@Localizer["FosterDescription"]</div>
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg" disabled="@isSaving">
                                    @if (isSaving)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                        @Localizer["Saving"]
                                    }
                                    else
                                    {
                                        @Localizer["SaveProfile"]
                                    }
                                </button>
                            </div>
                        </ValidatedForm>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            @Localizer["UnableToLoadProfile"]
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private User? currentUser;
    private bool isLoading = true;
    private bool isSaving = false;
    private bool isProfileComplete = false;
    private string? successMessage;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity?.IsAuthenticated == true)
            {
                var email = user.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value;
                if (!string.IsNullOrEmpty(email))
                {
                    currentUser = await UserService.GetUserByEmailAsync(email);
                    if (currentUser != null)
                    {
                        isProfileComplete = currentUser.IsProfileCompleted;
                    }
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Failed to load profile: " + ex.Message;
        }
        finally
        {
            isLoading = false;
        }

        // Subscribe to culture change
        LocalizationService.OnCultureChanged += OnCultureChanged;
    }

    private void OnCultureChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        LocalizationService.OnCultureChanged -= OnCultureChanged;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !isProfileComplete)
        {
            // Register navigation guard using JavaScript
            await JSRuntime.InvokeVoidAsync("eval", @"
                window.addEventListener('beforeunload', function(e) {
                    if (!window.profileCompleted) {
                        e.preventDefault();
                        e.returnValue = '';
                    }
                });
            ");
        }
    }

    private async Task HandleValidSubmit()
    {
        if (currentUser == null) return;

        isSaving = true;
        successMessage = null;
        errorMessage = null;

        try
        {
            // Update role based on IsFoster checkbox
            // Only change role if current role is User or Foster (don't affect Shelter or Admin)
            if (currentUser.Role == UserRole.User || currentUser.Role == UserRole.Foster)
            {
                currentUser.Role = currentUser.IsFoster ? UserRole.Foster : UserRole.User;
            }
            
            // Mark profile as completed
            currentUser.IsProfileCompleted = true;
            
            await UserService.UpdateUserAsync(currentUser);
            
            isProfileComplete = true;
            successMessage = Localizer["ProfileUpdateSuccess"];
            
            // Allow navigation after profile completion
            await JSRuntime.InvokeVoidAsync("eval", "window.profileCompleted = true;");
            
            // Notify other components that profile is completed
            ProfileState.NotifyProfileCompleted();
        }
        catch (Exception ex)
        {
            errorMessage = "Failed to update profile: " + ex.Message;
            currentUser.IsProfileCompleted = false;
        }
        finally
        {
            isSaving = false;
        }
    }
}