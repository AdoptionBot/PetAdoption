                <li class="nav-item @GetActiveClass("/blog")">
                    <NavLink class="nav-link" href="/blog">Blog</NavLink>
                </li>
                <li class="nav-item @GetActiveClass("/contact")">
                    <NavLink class="nav-link" href="/contact">Contact</NavLink>
                </li>
            </ul>
        </div>
    </div>
</nav>

@code {
    [Inject]
    private NavigationManager? NavigationManager { get; set; }

    private string GetActiveClass(string href)
    {
        if (NavigationManager == null) return string.Empty;
        
        var currentPath = new Uri(NavigationManager.Uri).AbsolutePath;
        return currentPath == href ? "active" : string.Empty;
    }
}